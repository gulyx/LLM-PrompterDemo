package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class 1561_DescriptionExample {

    @Test
    public void test_1() {
        int[] piles = {2,4,1,2,7,8};
        assertEquals(9, maxCoins(piles));
    }

    @Test
    public void test_2() {
        int[] piles = {2,4,5};
        assertEquals(4, maxCoins(piles));
    }

    @Test
    public void test_3() {
        int[] piles = {9,8,7,6,5,1,2,3,4};
        assertEquals(18, maxCoins(piles));
    }

    @Test
    public void test_4() {
        int[] piles = {1, 2, 3, 4, 5, 6, 7, 8, 9};
        assertEquals(36, maxCoins(piles));
    }

    @Test
    public void test_5() {
        int[] piles = {10, 20, 30, 40, 50};
        assertEquals(60, maxCoins(piles));
    }
}