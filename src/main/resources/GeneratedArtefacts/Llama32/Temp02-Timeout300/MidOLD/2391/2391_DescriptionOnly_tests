package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;
public class 2391_DescriptionOnlyTest {

    @Test
    public void test1() {
        String[] garbage = {"MPG", "GGP", "PPM"};
        int[] travel = {2, 1, 3};
        assertEquals(11, minCost(garbage, travel));
    }

    @Test
    public void test2() {
        String[] garbage = {"PG", "GM", "MP"};
        int[] travel = {1, 2, 1};
        assertEquals(5, minCost(garbage, travel));
    }

    @Test
    public void test3() {
        String[] garbage = {"GGG", "MMM", "PPP"};
        int[] travel = {1, 1, 1};
        assertEquals(6, minCost(garbage, travel));
    }

    @Test
    public void test4() {
        String[] garbage = {"MPM", "PGG", "GMG"};
        int[] travel = {2, 2, 3};
        assertEquals(11, minCost(garbage, travel));
    }

    @Test
    public void test5() {
        String[] garbage = {"GGP", "PPM", "MPG"};
        int[] travel = {1, 1, 2};
        assertEquals(6, minCost(garbage, travel));
    }
}