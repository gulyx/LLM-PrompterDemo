package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 1769_DescriptionOnlyTest {

    @Test
    public void test1() {
        int[] result = minOperations("001100");
        int[] expected = {0, 2, 1, 0};
        assertArrayEquals(expected, result);
    }

    @Test
    public void test2() {
        int[] result = minOperations("010110");
        int[] expected = {1, 3, 2, 1};
        assertArrayEquals(expected, result);
    }

    @Test
    public void test3() {
        int[] result = minOperations("0001000");
        int[] expected = {5, 4, 3, 2, 1, 0};
        assertArrayEquals(expected, result);
    }

    @Test
    public void test4() {
        int[] result = minOperations("111111");
        int[] expected = {0, 0, 0, 0, 0, 0};
        assertArrayEquals(expected, result);
    }

    @Test
    public void test5() {
        int[] result = minOperations("000000");
        int[] expected = {0, 0, 0, 0, 0, 0};
        assertArrayEquals(expected, result);
    }
}