```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class DescriptionExampleTest {

    @Test
    public void test1() {
        int[] result = findSmallestSet(6, new int[][]{{0, 1}, {0, 2}, {2, 5}, {3, 4}, {4, 2}});
        assertEquals(new int[]{0, 3}, result);
    }

    @Test
    public void test2() {
        int[] result = findSmallestSet(5, new int[][]{{0, 1}, {2, 1}, {3, 1}, {1, 4}, {2, 4}});
        assertEquals(new int[]{0, 2, 3}, result);
    }

    @Test
    public void test3() {
        int[] result = findSmallestSet(4, new int[][]{{0, 1}, {1, 2}, {2, 3}});
        assertEquals(new int[]{0, 1, 2, 3}, result);
    }

    @Test
    public void test4() {
        int[] result = findSmallestSet(1, new int[][]{{0, 0}});
        assertEquals(new int[]{0}, result);
    }

    @Test
    public void test5() {
        int[] result = findSmallestSet(2, new int[][]{{0, 1}, {1, 0}});
        assertEquals(new int[]{0, 1}, result);
    }
}
```