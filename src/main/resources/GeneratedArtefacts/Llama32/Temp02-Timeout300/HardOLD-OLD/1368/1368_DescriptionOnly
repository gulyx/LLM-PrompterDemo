package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 1368_DescriptionOnly {

    @Test
    public void test_1() {
        int[][] grid = {{2, 3}, {4, 5}};
        assertEquals(6, minCost(grid));
    }

    @Test
    public void test_2() {
        int[][] grid = {{0, 1}, {1, 0}};
        assertEquals(2, minCost(grid));
    }

    @Test
    public void test_3() {
        int[][] grid = {{4, 5, 6}, {7, 8, 9}, {10, 11, 12}};
        assertEquals(15, minCost(grid));
    }

    @Test
    public void test_4() {
        int[][] grid = {{1, 2, 3}, {4, 5, 6}, {7, 8, 9}};
        assertEquals(10, minCost(grid));
    }

    @Test
    public void test_5() {
        int[][] grid = {{0, 1, 2}, {3, 4, 5}, {6, 7, 8}};
        assertEquals(12, minCost(grid));
    }
}