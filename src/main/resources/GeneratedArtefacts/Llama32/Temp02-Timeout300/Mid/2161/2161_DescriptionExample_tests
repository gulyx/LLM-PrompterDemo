package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2161;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2161.Solution;
import org.junit.Test;
import static org.junit.Assert.*;

public class 2161_DescriptionExample_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[] nums = {9,12,5,10,14,3,10};
        int pivot = 10;
        int[] result = solution.reorderArray(nums, pivot);
        assertArrayEquals(new int[]{9,5,3,10,10,12,14}, result);
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[] nums = {-3,4,3,2};
        int pivot = 2;
        int[] result = solution.reorderArray(nums, pivot);
        assertArrayEquals(new int[]{-3,2,4,3}, result);
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[] nums = {1,2,3};
        int pivot = 2;
        int[] result = solution.reorderArray(nums, pivot);
        assertArrayEquals(new int[]{1,3,2}, result);
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[] nums = {5,7,6,8};
        int pivot = 8;
        int[] result = solution.reorderArray(nums, pivot);
        assertArrayEquals(new int[]{5,6,7,8}, result);
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[] nums = {1,2,3,4};
        int pivot = 3;
        int[] result = solution.reorderArray(nums, pivot);
        assertArrayEquals(new int[]{1,2,4,3}, result);
    }
}