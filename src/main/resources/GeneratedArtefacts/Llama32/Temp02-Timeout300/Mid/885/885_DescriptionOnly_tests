package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.885;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.885.Solution;
import org.junit.Test;
import static org.junit.Assert.*;

public class 885_DescriptionOnly_testsTest {

    @Test
    public void test_SpiralOrder() {
        Solution solution = new Solution();
        int[][] result = solution.spiralOrder(3);
        assertArrayEquals(new int[][]{{0, 2}, {1, 1}, {2, 0}}, result);
    }

    @Test
    public void test_SpiralOrder_4x4() {
        Solution solution = new Solution();
        int[][] result = solution.spiralOrder(4);
        assertArrayEquals(new int[][]{{3, 0}, {3, 1}, {2, 1}, {2, 2}, {1, 2}, {1, 3}, {0, 3}, {0, 2}, {0, 1}, {0, 0}}, result);
    }

    @Test
    public void test_SpiralOrder_5x5() {
        Solution solution = new Solution();
        int[][] result = solution.spiralOrder(5);
        assertArrayEquals(new int[][]{{4, 0}, {4, 1}, {4, 2}, {3, 2}, {3, 1}, {3, 0}, {2, 0}, {2, 1}, {2, 2}, {1, 2}, {1, 1}, {1, 0}}, result);
    }

    @Test
    public void test_SpiralOrder_6x6() {
        Solution solution = new Solution();
        int[][] result = solution.spiralOrder(6);
        assertArrayEquals(new int[][]{{5, 0}, {5, 1}, {4, 1}, {4, 2}, {3, 2}, {3, 1}, {3, 0}, {2, 0}, {2, 1}, {1, 1}, {1, 2}, {1, 3}, {0, 3}, {0, 2}, {0, 1}}, result);
    }

    @Test
    public void test_SpiralOrder_7x7() {
        Solution solution = new Solution();
        int[][] result = solution.spiralOrder(7);
        assertArrayEquals(new int[][]{{6, 0}, {6, 1}, {5, 1}, {5, 2}, {4, 2}, {4, 3}, {3, 3}, {3, 2}, {3, 1}, {2, 1}, {2, 2}, {1, 2}, {1, 3}, {0, 3}, {0, 2}, {0, 1}}, result);
    }
}