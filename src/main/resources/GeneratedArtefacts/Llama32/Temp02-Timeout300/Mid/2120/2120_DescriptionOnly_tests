package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 2120_DescriptionOnlyTest {

    @Test
    public void test1() {
        int n = 5;
        String[] startPos = {"2", "3"};
        String s = "DRUU";
        int[][] answer = solution(n, startPos, s);
        assertArrayEquals(new int[]{4}, answer[0]);
    }

    @Test
    public void test2() {
        int n = 1;
        String[] startPos = {"0", "0"};
        String s = "D";
        int[][] answer = solution(n, startPos, s);
        assertArrayEquals(new int[]{1}, answer[0]);
    }

    @Test
    public void test3() {
        int n = 2;
        String[] startPos = {"0", "0"};
        String s = "DR";
        int[][] answer = solution(n, startPos, s);
        assertArrayEquals(new int[]{2}, answer[0]);
    }

    @Test
    public void test4() {
        int n = 3;
        String[] startPos = {"1", "1"};
        String s = "URRDL";
        int[][] answer = solution(n, startPos, s);
        assertArrayEquals(new int[]{6}, answer[0]);
    }

    @Test
    public void test5() {
        int n = 4;
        String[] startPos = {"3", "2"};
        String s = "DDUURR";
        int[][] answer = solution(n, startPos, s);
        assertArrayEquals(new int[]{10}, answer[0]);
    }
}