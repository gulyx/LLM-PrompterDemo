package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2125;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2125.Solution;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertThrows;

public class 2125_DescriptionOnly_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        String[] bank = {"000", "111", "111"};
        assertEquals(2, solution.numLaserBeams(bank));
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        String[] bank = {"00111", "11100", "01110"};
        assertEquals(4, solution.numLaserBeams(bank));
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        String[] bank = {"0000", "0000", "0000"};
        assertEquals(0, solution.numLaserBeams(bank));
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        String[] bank = {"11111", "11111", "11111"};
        assertEquals(6, solution.numLaserBeams(bank));
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        assertThrows(NullPointerException.class, () -> solution.numLaserBeams(null));
    }
}