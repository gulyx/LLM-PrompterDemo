package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2079;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2079.Solution;
import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class DescriptionExampleTestsTest {

    @Test
    public void test_1() {
        Solution solution = new Solution();
        int[] plants = {2, 2, 3, 3};
        int capacity = 5;
        assertEquals(14, solution.wateringCanCapacity(plants, capacity));
    }

    @Test
    public void test_2() {
        Solution solution = new Solution();
        int[] plants = {1, 1, 1, 4, 2, 3};
        int capacity = 4;
        assertEquals(30, solution.wateringCanCapacity(plants, capacity));
    }

    @Test
    public void test_3() {
        Solution solution = new Solution();
        int[] plants = {7, 7, 7, 7, 7, 7, 7};
        int capacity = 8;
        assertEquals(49, solution.wateringCanCapacity(plants, capacity));
    }

    @Test
    public void test_4() {
        Solution solution = new Solution();
        int[] plants = {1, 2, 3, 4, 5};
        int capacity = 10;
        assertEquals(20, solution.wateringCanCapacity(plants, capacity));
    }

    @Test
    public void test_5() {
        Solution solution = new Solution();
        int[] plants = {1000000, 1000001, 1000002, 1000003};
        int capacity = 2000000;
        assertEquals(3000038, solution.wateringCanCapacity(plants, capacity));
    }
}
