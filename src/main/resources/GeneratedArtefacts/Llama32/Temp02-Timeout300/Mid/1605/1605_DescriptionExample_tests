```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1605;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1605.Solution;
import org.junit.Test;
import static org.junit.Assert.assertArrayEquals;

public class 1605_DescriptionExample_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[][] rowSum = {{3,8}};
        int[][] colSum = {{4,7}};
        int[][] result = solution.reconstructMatrix(rowSum, colSum);
        assertArrayEquals(new int[][]{{3,0},{1,7}}, result);
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[][] rowSum = {{5,7,10}};
        int[][] colSum = {{8,6,8}};
        int[][] result = solution.reconstructMatrix(rowSum, colSum);
        assertArrayEquals(new int[][]{{0,5,0},{6,1,0},{2,0,8}}, result);
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[][] rowSum = {{1}};
        int[][] colSum = {{1}};
        int[][] result = solution.reconstructMatrix(rowSum, colSum);
        assertArrayEquals(new int[][]{{0,0}}, result);
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[][] rowSum = {{2,3}};
        int[][] colSum = {{1,2}};
        int[][] result = solution.reconstructMatrix(rowSum, colSum);
        assertArrayEquals(new int[][]{{0,2},{3,0}}, result);
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[][] rowSum = {{4,6}};
        int[][] colSum = {{1,3}};
        int[][] result = solution.reconstructMatrix(rowSum, colSum);
        assertArrayEquals(new int[][]{{0,2},{4,0}}, result);
    }
}
```