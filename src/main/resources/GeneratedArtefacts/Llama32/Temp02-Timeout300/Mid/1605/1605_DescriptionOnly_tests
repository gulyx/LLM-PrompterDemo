package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1605;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1605.Solution;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.assertArrayEquals;

public class 1605_DescriptionOnly_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[][] rowSum = {{9}, {3}};
        int[][] colSum = {{12}, {6}};
        int[][] expected = {{4, 3}, {3, 4}};
        assertArrayEquals(expected, solution.reconstructMatrix(rowSum, colSum));
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[][] rowSum = {{1, 1}, {1, 1}};
        int[][] colSum = {{3}, {3}};
        int[][] expected = {{1, 0}, {0, 1}};
        assertArrayEquals(expected, solution.reconstructMatrix(rowSum, colSum));
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[][] rowSum = {{10}, {5}};
        int[][] colSum = {{15}, {20}};
        int[][] expected = {{1, 4}, {2, 3}};
        assertArrayEquals(expected, solution.reconstructMatrix(rowSum, colSum));
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[][] rowSum = {{7}, {8}};
        int[][] colSum = {{9}, {11}};
        int[][] expected = {{1, 6}, {2, 5}};
        assertArrayEquals(expected, solution.reconstructMatrix(rowSum, colSum));
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[][] rowSum = {{15}, {10}};
        int[][] colSum = {{20}, {30}};
        int[][] expected = {{1, 4}, {2, 3}};
        assertArrayEquals(expected, solution.reconstructMatrix(rowSum, colSum));
    }
}