package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.assertEquals;

public class 2221_DescriptionOnlyTest {

    @Test
    public void testTriangularSum_SingleElementArray() {
        int[] nums = {5};
        assertEquals(5, triangularSum(nums));
    }

    @Test
    public void testTriangularSum_TwoElementArray() {
        int[] nums = {2, 4};
        assertEquals(6, triangularSum(nums));
    }

    @Test
    public void testTriangularSum_MultipleElementArray() {
        int[] nums = {1, 3, 5, 7};
        assertEquals(8, triangularSum(nums));
    }

    @Test
    public void testTriangularSum_LargeMultipleElementArray() {
        int[] nums = {9, 2, 4, 5, 6, 7, 8, 1, 3, 7};
        assertEquals(8, triangularSum(nums));
    }

    @Test
    public void testTriangularSum_EmptyArray() {
        int[] nums = {};
        assertEquals(0, triangularSum(nums));
    }
}