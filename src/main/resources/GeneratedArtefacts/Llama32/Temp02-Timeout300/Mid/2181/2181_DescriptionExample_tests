package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2181;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2181.Solution;
import org.junit.Test;
import static org.junit.Assert.*;

public class 2181_DescriptionExample_testsTest {

    @Test
    public void test_1() {
        Solution solution = new Solution();
        int[] head = {0,3,1,0,4,5,2,0};
        int[] result = solution.mergeNodes(head);
        assertArrayEquals(new int[]{4,11}, result);
    }

    @Test
    public void test_2() {
        Solution solution = new Solution();
        int[] head = {0,1,0,3,0,2,2,0};
        int[] result = solution.mergeNodes(head);
        assertArrayEquals(new int[]{1,3,4}, result);
    }

    @Test
    public void test_3() {
        Solution solution = new Solution();
        int[] head = {0,0,1,0,3,2,3};
        int[] result = solution.mergeNodes(head);
        assertArrayEquals(new int[]{6}, result);
    }

    @Test
    public void test_4() {
        Solution solution = new Solution();
        int[] head = {0,0,0,0,1,2,3,4};
        int[] result = solution.mergeNodes(head);
        assertArrayEquals(new int[]{10}, result);
    }

    @Test
    public void test_5() {
        Solution solution = new Solution();
        int[] head = {0,0,0,0,0,1,2,3,4};
        int[] result = solution.mergeNodes(head);
        assertArrayEquals(new int[]{15}, result);
    }
}
