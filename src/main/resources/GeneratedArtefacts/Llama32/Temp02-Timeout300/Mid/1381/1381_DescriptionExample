```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class CustomStack_1381_DescriptionExample {

    @Test
    public void testPushAndPop() {
        CustomStack stack = new CustomStack(3);
        stack.push(1);
        stack.push(2);
        assertEquals(-1, stack.pop());
    }

    @Test
    public void testIncrement() {
        CustomStack stack = new CustomStack(3);
        stack.push(1);
        stack.push(2);
        stack.increment(0, 100);
        assertEquals(101, stack.pop());
    }

    @Test
    public void testPushAndPopMultipleTimes() {
        CustomStack stack = new CustomStack(3);
        stack.push(1);
        stack.push(2);
        stack.push(3);
        assertEquals(-1, stack.pop());
        assertEquals(-1, stack.pop());
        assertEquals(-1, stack.pop());
    }

    @Test
    public void testIncrementMultipleTimes() {
        CustomStack stack = new CustomStack(3);
        stack.push(1);
        stack.push(2);
        stack.increment(0, 100);
        assertEquals(101, stack.pop());
        assertEquals(101, stack.pop());
        assertEquals(101, stack.pop());
    }

    @Test
    public void testPushAndIncrement() {
        CustomStack stack = new CustomStack(3);
        stack.push(1);
        stack.increment(0, 100);
        assertEquals(101, stack.pop());
    }
}
```