package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 1310_DescriptionOnly {

    @Test
    public void test1() {
        int[] arr = {1,3};
        int[][] queries = {{0,1},{1,2}};
        int[] answer = new Solution().xorQueries(arr, queries);
        assertArrayEquals(new int[]{2, 4}, answer);
    }

    @Test
    public void test2() {
        int[] arr = {1, 2, 3, 4};
        int[][] queries = {{0, 1},{1, 2},{2, 3}};
        int[] answer = new Solution().xorQueries(arr, queries);
        assertArrayEquals(new int[]{1, 3, 7}, answer);
    }

    @Test
    public void test3() {
        int[] arr = {1, 2, 4, 8};
        int[][] queries = {{0, 1},{1, 2}};
        int[] answer = new Solution().xorQueries(arr, queries);
        assertArrayEquals(new int[]{1, 7}, answer);
    }

    @Test
    public void test4() {
        int[] arr = {1, 3, 5, 7};
        int[][] queries = {{0, 2},{1, 3}};
        int[] answer = new Solution().xorQueries(arr, queries);
        assertArrayEquals(new int[]{8, 15}, answer);
    }

    @Test
    public void test5() {
        int[] arr = {1, 2, 4, 8};
        int[][] queries = {{0, 3}};
        int[] answer = new Solution().xorQueries(arr, queries);
        assertArrayEquals(new int[]{15}, answer);
    }
}