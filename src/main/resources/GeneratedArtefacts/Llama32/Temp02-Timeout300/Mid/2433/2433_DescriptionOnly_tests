package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 2433_DescriptionOnlyTest {

    @Test
    public void test_XorArray() {
        int[] pref = {1, 2, 4};
        int[] arr = new int[pref.length];
        for (int i = 0; i < pref.length; i++) {
            arr[i] = pref[0] ^ pref[1] ^ pref[2];
        }
        assertArrayEquals(pref, arr);
    }

    @Test
    public void test_XorArray_WithOneElement() {
        int[] pref = {5};
        int[] arr = new int[pref.length];
        for (int i = 0; i < pref.length; i++) {
            arr[i] = pref[0];
        }
        assertArrayEquals(pref, arr);
    }

    @Test
    public void test_XorArray_WithTwoElements() {
        int[] pref = {1, 2};
        int[] arr = new int[pref.length];
        for (int i = 0; i < pref.length; i++) {
            arr[i] = pref[0] ^ pref[1];
        }
        assertArrayEquals(pref, arr);
    }

    @Test
    public void test_XorArray_WithNegativeNumbers() {
        int[] pref = {-2, -3};
        int[] arr = new int[pref.length];
        for (int i = 0; i < pref.length; i++) {
            arr[i] = pref[0] ^ pref[1];
        }
        assertArrayEquals(pref, arr);
    }

    @Test
    public void test_XorArray_WithZero() {
        int[] pref = {0};
        int[] arr = new int[pref.length];
        for (int i = 0; i < pref.length; i++) {
            arr[i] = pref[0];
        }
        assertArrayEquals(pref, arr);
    }

}