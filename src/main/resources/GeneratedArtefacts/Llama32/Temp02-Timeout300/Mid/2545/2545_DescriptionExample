package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertArrayEquals;

public class DescriptionExample {

    @Test
    public void testSortStudents() {
        int[][] score = {{10,6,9,1},{7,5,11,2},{4,8,3,15}};
        int k = 2;
        int[][] result = sortStudents(score, k);
        assertArrayEquals(new int[][]{{7,5,11,2},{10,6,9,1},{4,8,3,15}}, result);
    }

    @Test
    public void testSortStudents_K_0() {
        int[][] score = {{3,4},{5,6}};
        int k = 0;
        int[][] result = sortStudents(score, k);
        assertArrayEquals(new int[][]{{5,6},{3,4}}, result);
    }

    @Test
    public void testSortStudents_K_1() {
        int[][] score = {{10,6,9,1},{7,5,11,2},{4,8,3,15}};
        int k = 1;
        int[][] result = sortStudents(score, k);
        assertArrayEquals(new int[][]{{7,5,11,2},{10,6,9,1},{4,8,3,15}}, result);
    }

    @Test
    public void testSortStudents_K_2() {
        int[][] score = {{3,4},{5,6}};
        int k = 2;
        int[][] result = sortStudents(score, k);
        assertArrayEquals(new int[][]{{5,6},{3,4}}, result);
    }

    @Test
    public void testSortStudents_K_3() {
        int[][] score = {{10,6,9,1},{7,5,11,2},{4,8,3,15}};
        int k = 3;
        int[][] result = sortStudents(score, k);
        assertArrayEquals(new int[][]{{7,5,11,2},{10,6,9,1},{4,8,3,15}}, result);
    }

    public static int[][] sortStudents(int[][] score, int k) {
        // implement your sorting logic here
        return score;
    }
}
