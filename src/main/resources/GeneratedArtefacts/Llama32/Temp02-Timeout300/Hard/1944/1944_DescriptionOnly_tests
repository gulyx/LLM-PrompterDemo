package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1944;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1944.Solution;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class 1944_DescriptionOnly_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[] heights = {1,3,6,9};
        int[] answer = solution.couldSeePersonRight(heights);
        assertEquals(2, answer[0]);
        assertEquals(1, answer[1]);
        assertEquals(0, answer[2]);
        assertEquals(0, answer[3]);
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[] heights = {5,4,3,2,1};
        int[] answer = solution.couldSeePersonRight(heights);
        assertEquals(4, answer[0]);
        assertEquals(3, answer[1]);
        assertEquals(2, answer[2]);
        assertEquals(1, answer[3]);
        assertEquals(0, answer[4]);
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[] heights = {6,7,3,9};
        int[] answer = solution.couldSeePersonRight(heights);
        assertEquals(2, answer[0]);
        assertEquals(1, answer[1]);
        assertEquals(0, answer[2]);
        assertEquals(0, answer[3]);
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[] heights = {1, 1, 1, 1, 1};
        int[] answer = solution.couldSeePersonRight(heights);
        assertEquals(4, answer[0]);
        assertEquals(3, answer[1]);
        assertEquals(2, answer[2]);
        assertEquals(1, answer[3]);
        assertEquals(0, answer[4]);
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[] heights = {1, 2, 3, 4, 5};
        int[] answer = solution.couldSeePersonRight(heights);
        assertEquals(4, answer[0]);
        assertEquals(3, answer[1]);
        assertEquals(2, answer[2]);
        assertEquals(1, answer[3]);
        assertEquals(0, answer[4]);
    }
}