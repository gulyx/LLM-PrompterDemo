package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2551;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2551.Solution;
import org.junit.Test;
import static org.junit.Assert.*;

public class 2551_DescriptionOnly_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[] weights = {2,3,4};
        int k = 2;
        assertEquals(12, solution.descriptionOnly(weights, k));
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[] weights = {1,2,3,4,5};
        int k = 3;
        assertEquals(30, solution.descriptionOnly(weights, k));
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[] weights = {1,1,1,1,1};
        int k = 2;
        assertEquals(0, solution.descriptionOnly(weights, k));
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[] weights = {1000000000,1000000000,1000000000,1000000000};
        int k = 1;
        assertEquals(2000000000, solution.descriptionOnly(weights, k));
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[] weights = {2,3,4,5,6};
        int k = 10;
        assertEquals(30030, solution.descriptionOnly(weights, k));
    }
}