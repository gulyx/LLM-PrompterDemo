package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2551;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2551.Solution;
import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class DescriptionExampleTestsTest {

    @Test
    public void testMaxMinScore() {
        Solution solution = new Solution();
        int[] weights = {1, 3, 5, 1};
        int k = 2;
        assertEquals(4, solution.maxMinScore(weights, k));
    }

    @Test
    public void testMaxMinScore_2() {
        Solution solution = new Solution();
        int[] weights = {1, 3};
        int k = 2;
        assertEquals(0, solution.maxMinScore(weights, k));
    }

    @Test
    public void testMaxMinScore_3() {
        Solution solution = new Solution();
        int[] weights = {1, 2, 3, 4, 5};
        int k = 3;
        assertEquals(45, solution.maxMinScore(weights, k));
    }

    @Test
    public void testMaxMinScore_4() {
        Solution solution = new Solution();
        int[] weights = {10, 20, 30, 40, 50};
        int k = 5;
        assertEquals(1500, solution.maxMinScore(weights, k));
    }

    @Test
    public void testMaxMinScore_5() {
        Solution solution = new Solution();
        int[] weights = {1, 2, 3, 4, 5};
        int k = 10;
        assertEquals(2250, solution.maxMinScore(weights, k));
    }
}
