package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 1284_DescriptionOnly {

    @Test
    public void test_flipOne() {
        int[][] mat = {{1,0},{0,0}};
        assertEquals(2, flip(mat));
    }

    @Test
    public void test_flipTwo() {
        int[][] mat = {{1,1},{1,0}};
        assertEquals(3, flip(mat));
    }

    @Test
    public void test_flipThree() {
        int[][] mat = {{1,1,1},{1,0,0},{1,1,1}};
        assertEquals(4, flip(mat));
    }

    @Test
    public void test_zeroMatrix() {
        int[][] mat = {{0,0},{0,0}};
        assertEquals(0, flip(mat));
    }

    @Test
    public void test_cannotFlip() {
        int[][] mat = {{1,1,1},{1,1,1},{1,1,1}};
        assertEquals(-1, flip(mat));
    }
}