package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class 1284_DescriptionExampleTest {

    @Test
    public void test_flip() {
        int[][] mat = {{0,0},{0,1}};
        assertEquals(3, flip(mat));
    }

    @Test
    public void test_noFlip() {
        int[][] mat = {{0}};
        assertEquals(0, flip(mat));
    }

    @Test
    public void test_flipAll() {
        int[][] mat = {{1,0,0},{1,0,0}};
        assertEquals(-1, flip(mat));
    }

    @Test
    public void test_flipOne() {
        int[][] mat = {{0,1,0},{0,0,0}};
        assertEquals(2, flip(mat));
    }

    @Test
    public void test_flipTwo() {
        int[][] mat = {{0,0,0},{0,0,0}};
        assertEquals(0, flip(mat));
    }
}