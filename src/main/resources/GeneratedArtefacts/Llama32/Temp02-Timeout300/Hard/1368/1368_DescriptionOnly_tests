package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1368;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1368.Solution;
import org.junit.Test;
import static org.junit.Assert.*;

public class 1368_DescriptionOnly_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[][] grid = {{4,3,8},{3,2,1}};
        assertEquals(6, solution.minCost(grid));
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[][] grid = {{1,2,3},{4,5,6},{7,8,9}};
        assertEquals(18, solution.minCost(grid));
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[][] grid = {{0, 1, 2}, {3, 4, 5}, {6, 7, 8}};
        assertEquals(12, solution.minCost(grid));
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[][] grid = {{1, 2, 3}, {4, 5, 6}, {7, 8, 9}};
        assertEquals(0, solution.minCost(grid));
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[][] grid = {{0, 1, 2}, {3, 4, 5}, {6, 7, 8}};
        assertEquals(12, solution.minCost(grid));
    }
}