package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1368;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1368.Solution;

public class DescriptionExampleTestsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[][] grid = {{1, 1, 1, 1}, {2, 2, 2, 2}, {1, 1, 1, 1}, {2, 2, 2, 2}};
        int expectedOutput = 3;
        assertEquals(expectedOutput, solution.getMinimumCost(grid));
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[][] grid = {{1, 1, 3}, {3, 2, 2}, {1, 1, 4}};
        int expectedOutput = 0;
        assertEquals(expectedOutput, solution.getMinimumCost(grid));
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[][] grid = {{1, 2}, {4, 3}};
        int expectedOutput = 1;
        assertEquals(expectedOutput, solution.getMinimumCost(grid));
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[][] grid = {{1, 2, 3}, {4, 5, 6}, {7, 8, 9}};
        int expectedOutput = 10;
        assertEquals(expectedOutput, solution.getMinimumCost(grid));
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[][] grid = {{1, 2}, {3, 4}};
        int expectedOutput = 0;
        assertEquals(expectedOutput, solution.getMinimumCost(grid));
    }
}