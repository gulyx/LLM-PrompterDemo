    public void test5() {
        int[] plantTime = {1, 2, 3};
        int[] growTime = {1, 2, 3};
        assertEquals(5, solution(plantTime,growTime));
    }
}

public class Solution {

    public int solution(int[] plantTime, int[] growTime) {
        int n = plantTime.length;
        long totalPlantingDays = 0;
        long totalGrowingDays = 0;

        for (int i = 0; i < n; i++) {
            totalPlantingDays += plantTime[i];
            totalGrowingDays += growTime[i];
        }

        return Math.max(totalPlantingDays, totalGrowingDays);
    }
}