```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 2326_DescriptionOnly {

    @Test
    public void testGenerateMatrix_2x3() {
        int[][] matrix = generateMatrix(2, 3);
        assertArrayEquals(new int[][]{{1, 2}, {-1, -1}}, matrix);
    }

    @Test
    public void testGenerateMatrix_3x4() {
        int[][] matrix = generateMatrix(3, 4);
        assertArrayEquals(new int[][]{{1, 2, 3, 4},{-1, 5, -1, -1},{-1, -1, 6, -1}}, matrix);
    }

    @Test
    public void testGenerateMatrix_1x1() {
        int[][] matrix = generateMatrix(1, 1);
        assertArrayEquals(new int[][]{{1}}, matrix);
    }

    @Test
    public void testGenerateMatrix_4x5() {
        int[][] matrix = generateMatrix(4, 5);
        assertArrayEquals(new int[][]{
                {1,2,3,4,5},{-1,6,-1,7,-1},{-1,-1,8,-1,9},{-1,-1,-1,10,-1}
        }, matrix);
    }

    @Test
    public void testGenerateMatrix_0x0() {
        int[][] matrix = generateMatrix(0, 0);
        assertArrayEquals(new int[][]{{-1}}, matrix);
    }
}

```