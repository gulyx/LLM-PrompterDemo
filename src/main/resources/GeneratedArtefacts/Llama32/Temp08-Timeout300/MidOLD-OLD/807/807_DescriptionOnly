package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;
import java.util.*;

public class 807_DescriptionOnly {

    @Test
    public void test_1() {
        int[][] grid = {{2,9},{3,8}};
        assertEquals(32, maxIncreaseHeight(grid));
    }

    @Test
    public void test_2() {
        int[][] grid = {{3,0,8},{2,4,0},{1,3,1}};
        assertEquals(39, maxIncreaseHeight(grid));
    }

    @Test
    public void test_3() {
        int[][] grid = {{5,1,5},{9,3,5}};
        assertEquals(54, maxIncreaseHeight(grid));
    }

    @Test
    public void test_4() {
        int[][] grid = {{0,2,1},{2,8,7},{0,0,6}};
        assertEquals(50, maxIncreaseHeight(grid));
    }

    @Test
    public void test_5() {
        int[][] grid = {{10,100,80},{50,40,60},{20,60,70}};
        assertEquals(210, maxIncreaseHeight(grid));
    }
}