package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class DescriptionExample {

    @Test
    public void [--Example 1--]() {
        int[] nums = {0, 1, 1, 3};
        int maximumBit = 2;
        int[] answer = new Solution().maxK(nums, maximumBit);
        assertArrayEquals(new int[]{0, 3, 2, 3}, answer);
    }

    @Test
    public void [--Example 2--]() {
        int[] nums = {2, 3, 4, 7};
        int maximumBit = 3;
        int[] answer = new Solution().maxK(nums, maximumBit);
        assertArrayEquals(new int[]{5, 2, 6, 5}, answer);
    }

    @Test
    public void [--Example 3--]() {
        int[] nums = {0, 1, 2, 2, 5, 7};
        int maximumBit = 3;
        int[] answer = new Solution().maxK(nums, maximumBit);
        assertArrayEquals(new int[]{4, 3, 6, 4, 6, 7}, answer);
    }

    @Test
    public void [--Example 4--]() {
        int[] nums = {0, 1};
        int maximumBit = 2;
        int[] answer = new Solution().maxK(nums, maximumBit);
        assertArrayEquals(new int[]{0, 1}, answer);
    }

    @Test
    public void [--Example 5--]() {
        int[] nums = {0, 1, 2, 3};
        int maximumBit = 1;
        int[] answer = new Solution().maxK(nums, maximumBit);
        assertArrayEquals(new int[]{0}, answer);
    }
}
