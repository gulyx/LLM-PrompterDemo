package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1829;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1829.Solution;
import org.junit.Test;
import static org.junit.Assert.*;
public class 1829_DescriptionExample_testsTest {

    @Test
    public void test_1() {
        Solution solution = new Solution();
        int[] nums = {0, 1, 1, 3};
        int maximumBit = 2;
        int[] answer = solution.maxXORofAllBits(nums, maximumBit);
        assertArrayEquals(new int[]{0, 3, 2, 3}, answer);
    }

    @Test
    public void test_2() {
        Solution solution = new Solution();
        int[] nums = {2, 3, 4, 7};
        int maximumBit = 3;
        int[] answer = solution.maxXORofAllBits(nums, maximumBit);
        assertArrayEquals(new int[]{5, 2, 6, 5}, answer);
    }

    @Test
    public void test_3() {
        Solution solution = new Solution();
        int[] nums = {0, 1, 2, 2, 5, 7};
        int maximumBit = 3;
        int[] answer = solution.maxXORofAllBits(nums, maximumBit);
        assertArrayEquals(new int[]{4, 3, 6, 4, 6, 7}, answer);
    }

    @Test
    public void test_4() {
        Solution solution = new Solution();
        int[] nums = {0};
        int maximumBit = 1;
        int[] answer = solution.maxXORofAllBits(nums, maximumBit);
        assertArrayEquals(new int[]{0}, answer);
    }

    @Test
    public void test_5() {
        Solution solution = new Solution();
        int[] nums = {100};
        int maximumBit = 2;
        int[] answer = solution.maxXORofAllBits(nums, maximumBit);
        assertArrayEquals(new int[]{99}, answer);
    }
}