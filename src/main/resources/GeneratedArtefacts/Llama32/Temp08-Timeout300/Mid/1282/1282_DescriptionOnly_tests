package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1282;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1282.Solution;
import org.junit.Test;
import static org.junit.Assert.*;

public class 1282_DescriptionOnly_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[] groupSizes = {2,3,2};
        Object result = solution.groupThePeople(groupSizes);
        assertEquals("[[0, 1], [2, 3]]", java.util.Arrays.toString(result));
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[] groupSizes = {3,1,4};
        Object result = solution.groupThePeople(groupSizes);
        assertEquals("[[0, 2], [1], [3]]", java.util.Arrays.toString(result));
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[] groupSizes = {7,4,7};
        Object result = solution.groupThePeople(groupSizes);
        assertEquals("[[0], [1], [2], [3], [4], [5], [6]]", java.util.Arrays.toString(result));
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[] groupSizes = {2, 7, 2};
        Object result = solution.groupThePeople(groupSizes);
        assertEquals("[[0,1], [2,3], [4,5], [6]]", java.util.Arrays.toString(result));
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[] groupSizes = {2, 7};
        Object result = solution.groupThePeople(groupSizes);
        assertEquals("[[0,1], [2,3], [4,5], [6]]", java.util.Arrays.toString(result));
    }
}
