package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2997;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2997.Solution;
import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class 2997_DescriptionExample_testsTest {

    @Test
    public void testExample1() {
        Solution solution = new Solution();
        int[] nums = {2, 1, 3, 4};
        int k = 1;
        assertEquals(2, solution.minOperations(nums, k));
    }

    @Test
    public void testExample2() {
        Solution solution = new Solution();
        int[] nums = {2, 0, 2, 0};
        int k = 0;
        assertEquals(0, solution.minOperations(nums, k));
    }

    @Test
    public void testExample3() {
        Solution solution = new Solution();
        int[] nums = {1, 2, 3, 4};
        int k = 5;
        assertEquals(6, solution.minOperations(nums, k));
    }

    @Test
    public void testExample4() {
        Solution solution = new Solution();
        int[] nums = {1000, 0, 0, 0};
        int k = 1000;
        assertEquals(2, solution.minOperations(nums, k));
    }

    @Test
    public void testExample5() {
        Solution solution = new Solution();
        int[] nums = {1, 1, 1, 1};
        int k = 3;
        assertEquals(6, solution.minOperations(nums, k));
    }
}