package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class 1551_DescriptionOnlyTest {

    public int minOperations(int n) {
        return (n-1)/2;
    }

    @Test
    public void testMinOperations_0() {
        assertEquals(0, minOperations(0));
    }

    @Test
    public void testMinOperations_1() {
        assertEquals(0, minOperations(1));
    }

    @Test
    public void testMinOperations_2() {
        assertEquals(1, minOperations(2));
    }

    @Test
    public void testMinOperations_3() {
        assertEquals(1, minOperations(3));
    }

    @Test
    public void testMinOperations_4() {
        assertEquals(2, minOperations(4));
    }
}
```