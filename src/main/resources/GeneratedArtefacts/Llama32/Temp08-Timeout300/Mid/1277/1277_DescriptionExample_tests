package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1277;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1277.Solution;
import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class DescriptionExampleTestsTest {

    @Test
    public void example1() {
        Solution solution = new Solution();
        int[][] matrix = {{0, 1, 1, 1}, {1, 1, 1, 1}, {0, 1, 1, 1}};
        assertEquals(15, solution.numIslands(matrix));
    }

    @Test
    public void example2() {
        Solution solution = new Solution();
        int[][] matrix = {{1, 0, 1}, {1, 1, 0}, {1, 1, 0}};
        assertEquals(7, solution.numIslands(matrix));
    }

    @Test
    public void example3() {
        Solution solution = new Solution();
        int[][] matrix = {{0, 0, 0}, {0, 0, 0}, {0, 0, 0}};
        assertEquals(0, solution.numIslands(matrix));
    }

    @Test
    public void example4() {
        Solution solution = new Solution();
        int[][] matrix = {{1, 1, 1}, {1, 1, 1}, {1, 1, 1}};
        assertEquals(9, solution.numIslands(matrix));
    }

    @Test
    public void example5() {
        Solution solution = new Solution();
        int[][] matrix = {{0, 1, 0}, {1, 0, 1}, {0, 1, 0}};
        assertEquals(3, solution.numIslands(matrix));
    }
}
