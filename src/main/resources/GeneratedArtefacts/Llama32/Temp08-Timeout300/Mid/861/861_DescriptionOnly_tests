```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;
public class MainTest {

    @Test
    public void testScoreFromMatrix() {
        int[][] grid = {{1, 0}, {1, 1}};
        assertEquals(2, Main.scoreFromMatrix(grid));
    }

    @Test
    public void testScoreFromMatrix2() {
        int[][] grid = {{0, 1}, {0, 0}};
        assertEquals(0, Main.scoreFromMatrix(grid));
    }

    @Test
    public void testScoreFromMatrix3() {
        int[][] grid = {{0, 0}, {0, 0}};
        assertEquals(0, Main.scoreFromMatrix(grid));
    }

    @Test
    public void testScoreFromMatrix4() {
        int[][] grid = {{1, 0, 1}, {1, 1, 0}};
        assertEquals(3, Main.scoreFromMatrix(grid));
    }

    @Test
    public void testScoreFromMatrix5() {
        int[][] grid = {{1, 1, 1}, {1, 1, 1}};
        assertEquals(3, Main.scoreFromMatrix(grid));
    }
}
```