package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;
import java.util.Arrays;

public class 2181_DescriptionExampleTest {
    public static int[] mergeNodes(int[] head) {
        // your implementation here
        return new int[0];
    }

    @Test
    public void testMergeNodes_Example1() {
        int[] head = {0,3,1,0,4,5,2,0};
        int[] expected = {4,11};
        assertArrayEquals(expected, mergeNodes(head));
    }

    @Test
    public void testMergeNodes_Example2() {
        int[] head = {0,1,0,3,0,2,2,0};
        int[] expected = {1,3,4};
        assertArrayEquals(expected, mergeNodes(head));
    }

    @Test
    public void testMergeNodes_EmptyList() {
        int[] head = {};
        int[] expected = {};
        assertArrayEquals(expected, mergeNodes(head));
    }

    @Test
    public void testMergeNodes_SingleElement() {
        int[] head = {0};
        int[] expected = {};
        assertArrayEquals(expected, mergeNodes(head));
    }

    @Test
    public void testMergeNodes_NullList() {
        int[] head = null;
        try {
            mergeNodes(head);
            fail("NullPointerException expected");
        } catch (NullPointerException e) {}
        assertArrayEquals(new int[0], mergeNodes(head));
    }
}
