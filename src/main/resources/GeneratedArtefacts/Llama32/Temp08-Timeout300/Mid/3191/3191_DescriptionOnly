package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class 3191_DescriptionOnly {

    @Test
    public void test1() {
        int[] nums = {1, 1, 0};
        assertEquals(2, getMinOperations(nums));
    }

    @Test
    public void test2() {
        int[] nums = {0, 0, 1};
        assertEquals(-1, getMinOperations(nums));
    }

    @Test
    public void test3() {
        int[] nums = {1, 1, 1, 0, 0, 0};
        assertEquals(6, getMinOperations(nums));
    }

    @Test
    public void test4() {
        int[] nums = {1, 0, 1, 0, 1, 0};
        assertEquals(6, getMinOperations(nums));
    }

    @Test
    public void test5() {
        int[] nums = {0, 0, 0, 0, 0};
        assertEquals(-1, getMinOperations(nums));
    }
}