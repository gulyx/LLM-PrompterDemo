package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;
public class 2785_DescriptionOnly {

    @Test
    public void testVowelsInOrder() {
        String s = "leetcode";
        String expected = "leetcode";
        assertEquals(expected, solve(s));
    }

    @Test
    public void testNoVowel() {
        String s = "helloworld";
        String expected = "helloworld";
        assertEquals(expected, solve(s));
    }

    @Test
    public void testVowelsInOrderWithUppercase() {
        String s = "LeetCoding";
        String expected = "eEoodDeoc";
        assertEquals(expected, solve(s));
    }

    @Test
    public void testEmptyString() {
        String s = "";
        String expected = "";
        assertEquals(expected, solve(s));
    }

    @Test
    public void testOnlyVowels() {
        String s = "aeiou";
        String expected = "aeiou";
        assertEquals(expected, solve(s));
    }
}