package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 2125_DescriptionOnly {

    @Test
    public void test_Example1(){
        String[] bank = {"0000", "1111", "1111", "0000"};
        int result = numberOfBeams(bank);
        assertEquals(2, result);
    }

    @Test
    public void test_Example2(){
        String[] bank = {"10101", "01010", "10000", "00011"};
        int result = numberOfBeams(bank);
        assertEquals(8, result);
    }

    @Test
    public void test_3x4_BinaryArray(){
        String[] bank = {"1100", "1111", "0000", "1111"};
        int result = numberOfBeams(bank);
        assertEquals(2, result);
    }

    @Test
    public void test_NoBeams(){
        String[] bank = {"0000", "0000", "0000", "0000"};
        int result = numberOfBeams(bank);
        assertEquals(0, result);
    }
}