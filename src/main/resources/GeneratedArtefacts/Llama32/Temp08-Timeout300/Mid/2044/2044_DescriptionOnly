package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;
public class 2044_DescriptionOnlyTest {

    @Test
    public void testFindMaxBitwiseOR() {
        int[] nums = {3,1,2,4};
        assertEquals(6, findMaxBitwiseOr(nums));
    }

    @Test
    public void testFindMaxBitwiseOR_EmptyArray() {
        int[] nums = {};
        assertEquals(-1, findMaxBitwiseOr(nums));
    }

    @Test
    public void testFindMaxBitwiseOR_SingleElement() {
        int[] nums = {1};
        assertEquals(0, findMaxBitwiseOr(nums));
    }

    @Test
    public void testFindMaxBitwiseOR_TwoElements() {
        int[] nums = {2,3};
        assertEquals(6, findMaxBitwiseOr(nums));
    }

    @Test
    public void testFindMaxBitwiseOR_MultipleElements() {
        int[] nums = {1, 2, 4, 8};
        assertEquals(15, findMaxBitwiseOr(nums));
    }
}