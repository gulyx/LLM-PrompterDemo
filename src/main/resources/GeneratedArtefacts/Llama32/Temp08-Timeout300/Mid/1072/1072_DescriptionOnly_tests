package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1072;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1072.Solution;
import org.junit.Test;
import static org.junit.Assert.*;

public class 1072_DescriptionOnly_testsTest {

    @Test
    public void testMaxEqualRowsAfterFlips() {
        Solution solution = new Solution();
        int[][] matrix = {{0,1}, {1,0}};
        int expected = 2;
        assertEquals(expected, solution.maxEqualRowsAfterFlips(matrix));
    }

    @Test
    public void testMaxEqualRowsAfterFlips_2() {
        Solution solution = new Solution();
        int[][] matrix = {{0,1,1},{1,0,1}};
        int expected = 3;
        assertEquals(expected, solution.maxEqualRowsAfterFlips(matrix));
    }

    @Test
    public void testMaxEqualRowsAfterFlips_3() {
        Solution solution = new Solution();
        int[][] matrix = {{0,0,1},{1,0,0}};
        int expected = 2;
        assertEquals(expected, solution.maxEqualRowsAfterFlips(matrix));
    }

    @Test
    public void testMaxEqualRowsAfterFlips_4() {
        Solution solution = new Solution();
        int[][] matrix = {{0,0},{0,0}};
        int expected = 2;
        assertEquals(expected, solution.maxEqualRowsAfterFlips(matrix));
    }

    @Test
    public void testMaxEqualRowsAfterFlips_5() {
        Solution solution = new Solution();
        int[][] matrix = {{1,1},{1,1}};
        int expected = 1;
        assertEquals(expected, solution.maxEqualRowsAfterFlips(matrix));
    }
}