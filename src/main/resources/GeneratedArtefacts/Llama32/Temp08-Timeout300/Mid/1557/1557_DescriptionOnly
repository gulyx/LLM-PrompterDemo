package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 1557_DescriptionOnlyTest {

    @Test
    public void test1() {
        int[][] edges = {{0,1},{1,2},{2,0}};
        int[] result = new int[]{0,1,2};
        assertArrayEquals(result, findSmallestSetOfVertices(edges));
    }

    @Test
    public void test2() {
        int[][] edges = {};
        int[] result = new int[]{0};
        assertArrayEquals(result, findSmallestSetOfVertices(edges));
    }

    @Test
    public void test3() {
        int[][] edges = {{0,1}};
        int[] result = new int[]{0};
        assertArrayEquals(result, findSmallestSetOfVertices(edges));
    }

    @Test
    public void test4() {
        int[][] edges = {{0,1},{1,2},{2,0},{3,4},{4,5}};
        int[] result = new int[]{0, 1, 2, 3, 4, 5};
        assertArrayEquals(result, findSmallestSetOfVertices(edges));
    }

    @Test
    public void test5() {
        int[][] edges = {{0,1},{1,2}};
        int[] result = new int[]{0, 1};
        assertArrayEquals(result, findSmallestSetOfVertices(edges));
    }
}