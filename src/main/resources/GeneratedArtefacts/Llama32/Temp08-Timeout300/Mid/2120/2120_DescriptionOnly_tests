package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;
public class 2120_DescriptionOnlyTest {

    @Test
    public void testRobotSimulator() {
        int n = 3;
        int[] startPos = {1, 2};
        String s = "ULLLL";
        int[][] answer = robotSimulator(n, startPos, s);
        assertEquals(new int[]{4}, answer[0]);
    }

    @Test
    public void testRobotSimulator_9() {
        int n = 3;
        int[] startPos = {1, 2};
        String s = "UULDR";
        int[][] answer = robotSimulator(n, startPos, s);
        assertEquals(new int[]{7}, answer[0]);
    }

    @Test
    public void testRobotSimulator_5() {
        int n = 3;
        int[] startPos = {1, 2};
        String s = "LURD";
        int[][] answer = robotSimulator(n, startPos, s);
        assertEquals(new int[]{4}, answer[0]);
    }

    @Test
    public void testRobotSimulator_4() {
        int n = 3;
        int[] startPos = {1, 2};
        String s = "LULDU";
        int[][] answer = robotSimulator(n, startPos, s);
        assertEquals(new int[]{3}, answer[0]);
    }

    @Test
    public void testRobotSimulator_7() {
        int n = 5;
        int[] startPos = {2, 1};
        String s = "UDLLRU";
        int[][] answer = robotSimulator(n, startPos, s);
        assertEquals(new int[]{6}, answer[0]);
    }

}