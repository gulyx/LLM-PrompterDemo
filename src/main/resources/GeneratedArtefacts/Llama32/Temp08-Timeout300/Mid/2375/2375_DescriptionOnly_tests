package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;
public class 2375_DescriptionOnlyTest {

    @Test
    public void testLexicographicallySmallestPossibleString_givenIncreasingSequence_returnsCorrectString() {
        String pattern = "I";
        String num = generateNum(pattern);
        assertEquals("18", num);
    }

    @Test
    public void testLexicographicallySmallestPossibleString_givenDecreasingSequence_returnsCorrectString() {
        String pattern = "D";
        String num = generateNum(pattern);
        assertEquals("19", num);
    }

    @Test
    public void testLexicographicallySmallestPossibleString_givenMixedSequence_returnsCorrectString() {
        String pattern = "ID";
        String num = generateNum(pattern);
        assertEquals("182", num);
    }

    @Test
    public void testLexicographicallySmallestPossibleString_emptyPattern_returnsCorrectString() {
        String pattern = "";
        String num = generateNum(pattern);
        assertEquals("", num);
    }

    @Test
    public void testLexicographicallySmallestPossibleString_singleCharacterPattern_returnsCorrectString() {
        String pattern = "D";
        String num = generateNum(pattern);
        assertEquals("9", num);
    }
}