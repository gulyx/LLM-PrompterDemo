package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1877;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1877.Solution;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertThrows;

public class 1877_DescriptionOnly_testsTest {

    @Test
    public void test_example1() {
        Solution solution = new Solution();
        int[] nums = {1,2,3,4};
        assertEquals(8, solution.maxPairSum(nums));
    }

    @Test
    public void test_example2() {
        Solution solution = new Solution();
        int[] nums = {6, 5, 4, 7, 6};
        assertEquals(11, solution.maxPairSum(nums));
    }

    @Test
    public void test_edge_case_0() {
        Solution solution = new Solution();
        assertThrows(NullPointerException.class, () -> solution.maxPairSum(null));
    }

    @Test
    public void test_edge_case_empty_list() {
        Solution solution = new Solution();
        assertEquals(0, solution.maxPairSum(new int[0]));
    }

    @Test
    public void test_negative_numbers() {
        Solution solution = new Solution();
        assertThrows(NullPointerException.class, () -> solution.maxPairSum(new int[] {-1,-2,3}));
    }
}