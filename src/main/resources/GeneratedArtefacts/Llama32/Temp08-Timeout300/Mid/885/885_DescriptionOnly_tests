package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 885_DescriptionOnlyTest {

    @Test
    public void test SpiralOrder() {
        int[][] result = spiralOrder(5, 5);
        assertEquals(new int[]{1, 2, 3, 4, 8, 9, 16, 17, 24, 25}, result);
    }

    @Test
    public void test SpiralOrder_0() {
        int[][] result = spiralOrder(0, 5);
        assertArrayEquals(new int[]{1, 2, 3, 4, 8, 9, 16, 17, 24, 25}, result);
    }

    @Test
    public void test SpiralOrder_5() {
        int[][] result = spiralOrder(5, 0);
        assertEquals(new int[]{1, 2, 3, 4, 8, 9, 16, 17, 24, 25}, result);
    }

    @Test
    public void test SpiralOrder_10() {
        int[][] result = spiralOrder(10, 5);
        assertEquals(new int[]{1, 2, 3, 4, 8, 9, 16, 17, 24, 25, 49, 50}, result);
    }

    @Test
    public void test SpiralOrder_15() {
        int[][] result = spiralOrder(15, 5);
        assertEquals(new int[]{1, 2, 3, 4, 8, 9, 16, 17, 24, 25, 49, 50, 81, 82, 89}, result);
    }
}