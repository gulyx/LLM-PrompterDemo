package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class DescriptionExampleTest {

    @Test
    public void testWateringPlanets_1() {
        int[] plants = {2, 2, 3, 3};
        int capacity = 5;
        assertEquals(14, wateringPlanets(plants, capacity));
    }

    @Test
    public void testWateringPlanets_2() {
        int[] plants = {1, 1, 1, 4, 2, 3};
        int capacity = 4;
        assertEquals(30, wateringPlanets(plants, capacity));
    }

    @Test
    public void testWateringPlanets_3() {
        int[] plants = {7, 7, 7, 7, 7, 7, 7};
        int capacity = 8;
        assertEquals(49, wateringPlanets(plants, capacity));
    }

    @Test
    public void testWateringPlanets_EmptyArray() {
        int[] plants = {};
        int capacity = 5;
        assertEquals(0, wateringPlanets(plants, capacity));
    }

    @Test
    public void testWateringPlanets_SingleElementArray() {
        int[] plants = {3};
        int capacity = 5;
        assertEquals(4, wateringPlanets(plants, capacity));
    }
}