package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class 2482_DescriptionOnlyTest {

    @Test
    public void test_DiffMatrixOneRow(){
        int[][] grid = {{1,0},{0,1}};
        int[][] result = new int[grid.length][grid[0].length];
        assertEquals(result, computeDiff(grid));
    }

    @Test
    public void test_DiffMatrixTwoRows(){
        int[][] grid = {{1,0,1},{0,1,0}};
        int[][] result = new int[grid.length][grid[0].length];
        assertEquals(result, computeDiff(grid));
    }

     @Test
     public void test_DiffMatrixOneColumn(){
         int[][] grid = {{1,0},{0,1}};
         int[][] result = new int[grid.length][grid[0].length];
         assertEquals(result, computeDiff(grid));
     }

     @Test
     public void test_DiffMatrixTwoColumns(){
        int[][] grid ={{1,0,1},{0,1,0}};
        int[][] result = new int[grid.length][grid[0].length];
        assertEquals(result, computeDiff(grid));
     }

     @Test
     public void test_DiffMatrixEmpty(){
         int[][] grid = {};
         int[][] result = new int[grid.length][grid[0].length];
         assertEquals(result, computeDiff(grid));
     }
 }