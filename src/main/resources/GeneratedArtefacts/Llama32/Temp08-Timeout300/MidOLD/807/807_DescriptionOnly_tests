package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class Eight07_DescriptionOnlyTest {

    @Test
    public void test1() {
        int[][] grid = { { 0, 0 }, { 0, 100 } };
        assertEquals(200, maxIncreaseHeight(grid));
    }

    @Test
    public void test2() {
        int[][] grid = { { 100, 100 }, { 100, 0 } };
        assertEquals(0, maxIncreaseHeight(grid));
    }

    @Test
    public void test3() {
        int[][] grid = { { 0, 98 }, { 0, 0 } };
        assertEquals(198, maxIncreaseHeight(grid));
    }

    @Test
    public void test4() {
        int[][] grid = { { 100, 0 }, { 0, 100 } };
        assertEquals(200, maxIncreaseHeight(grid));
    }

    @Test
    public void test5() {
        int[][] grid = { { 0, 0 }, { 98, 98 } };
        assertEquals(196, maxIncreaseHeight(grid));
    }
}