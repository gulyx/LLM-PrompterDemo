package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1526;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1526.Solution;
import org.junit.Test;
import static org.junit.Assert.*;

public class DescriptionExampleTestsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[] target = {1, 2, 3, 2, 1};
        int expected = 3;
        assertEquals(expected, solution.minOperations(target));
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[] target = {3, 1, 1, 2};
        int expected = 4;
        assertEquals(expected, solution.minOperations(target));
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[] target = {3, 1, 5, 4, 2};
        int expected = 7;
        assertEquals(expected, solution.minOperations(target));
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[] target = {9, 1, 0, 5, 3};
        int expected = 5;
        assertEquals(expected, solution.minOperations(target));
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[] target = {6,7,8,9,10};
        int expected = 15;
        assertEquals(expected, solution.minOperations(target));
    }
}
