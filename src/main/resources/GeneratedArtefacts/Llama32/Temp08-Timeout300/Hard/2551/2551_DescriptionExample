    public void testLowestScore() {
        int[] weights = {1, 3};
        int k = 2;
        long result = divideMarbles(weights, k);
        assertEquals(0L, result);
    }

    @Test
    public void testHighestScore() {
        int[] weights = {1000000000, 999999999};
        int k = 2;
        long result = divideMarbles(weights, k);
        assertEquals(1999999999L, result);
    }

    @Test
    public void testSameWeights() {
        int[] weights = {1, 1, 1, 1};
        int k = 4;
        long result = divideMarbles(weights, k);
        assertEquals(6L, result);
    }

    @Test
    public void testOnlyOneWeight() {
        int[] weights = {10};
        int k = 2;
        long result = divideMarbles(weights, k);
        assertEquals(20L, result);
    }
}

