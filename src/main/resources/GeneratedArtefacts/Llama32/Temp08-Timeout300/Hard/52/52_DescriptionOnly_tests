package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.52;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.52.Solution;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertThrows;

public class 52_DescriptionOnly_testsTest {

    @Test
    void testSolve() {
        Solution solution = new Solution();
        assertEquals(92, solution.solve(4));
    }

    @Test
    void testSolve_1() {
        Solution solution = new Solution();
        assertThrows(IllegalArgumentException.class, () -> solution.solve(-1));
    }

    @Test
    void testSolve_2() {
        Solution solution = new Solution();
        assertEquals(0, solution.solve(0));
    }

    @Test
    void testSolve_3() {
        Solution solution = new Solution();
        assertEquals(1, solution.solve(1));
    }

    @Test
    void testSolve_4() {
        Solution solution = new Solution();
        assertEquals(2, solution.solve(2));
    }
}