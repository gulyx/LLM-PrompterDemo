```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.assertEquals;

public class DescriptionExampleTest {

    @Test
    public void test_minimumCost() {
        int[][] grid = {{1, 1, 1, 1}, {2, 2, 2, 2}, {1, 1, 1, 1}, {2, 2, 2, 2}};
        assertEquals(3, DescriptionExample.minCost(grid));
    }

    @Test
    public void test_minimumCost_2() {
        int[][] grid = {{1, 1, 3}, {3, 2, 2}, {1, 1, 4}};
        assertEquals(0, DescriptionExample.minCost(grid));
    }

    @Test
    public void test_minimumCost_3() {
        int[][] grid = {{1, 2}, {4, 3}};
        assertEquals(1, DescriptionExample.minCost(grid));
    }
}
```