package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1255;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1255.Solution;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.assertEquals;

public class 1255_DescriptionOnly_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        String[] words = {"leetcode", "it", "action"};
        char[] letters = {'l', 'e', 'et', 'a', 'o', 'i', 'n', 's'};
        int score[] = {53, 0, 0};
        assertEquals(14, solution.maxScore(words, letters, score));
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        String[] words = {"apple", "pen"};
        char[] letters = {'p', 'e', 'n'};
        int score[] = {0, 0};
        assertEquals(0, solution.maxScore(words, letters, score));
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        String[] words = {"cats", "bat"};
        char[] letters = {'c', 'a', 't'};
        int score[] = {0, 0};
        assertEquals(10, solution.maxScore(words, letters, score));
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        String[] words = {"dog", "racecar"};
        char[] letters = {'r', 'a', 'c'};
        int score[] = {0, 0};
        assertEquals(0, solution.maxScore(words, letters, score));
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        String[] words = {"hello", "world"};
        char[] letters = {'h', 'e', 'l'};
        int score[] = {8, 0};
        assertEquals(8, solution.maxScore(words, letters, score));
    }
}