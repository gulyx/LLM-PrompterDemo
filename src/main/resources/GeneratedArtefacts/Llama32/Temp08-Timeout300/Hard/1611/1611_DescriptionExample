package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class Desc_1679_TransformIntoBinary {

    @Test
    public void testTransformIntoBinary() {
        int n = 3, result = minOperations(n);
        assertEquals(2, result);
    }

    @Test
    public void testTransformIntoBinaryWithDifferentNumbers() {
        int n = 6, result = minOperations(n);
        assertEquals(4, result);
    }

    @Test
    public void testTransformIntoBinaryWithLargeNumber() {
        int n = 2147483647, result = minOperations(n);
        assertEquals(12, result);
    }

    @Test
    public void testTransformIntoBinaryWithZero() {
        int n = 0, result = minOperations(n);
        assertEquals(0, result);
    }

    @Test
    public void testTransformIntoBinaryWithNegativeNumber() {
        int n = -1, result = minOperations(n);
        assertEquals(-1, result);
    }
}
