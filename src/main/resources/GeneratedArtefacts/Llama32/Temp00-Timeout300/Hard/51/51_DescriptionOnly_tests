package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import java.util.*;

public class 51_DescriptionOnlyTest {

    @Test
    public void testNQueensPuzzle() {
        int n = 4;
        List<List<String>> result = new Solution().solveNQueens(n);
        assertEquals(2, result.size());
        assertTrue(result.contains(new ArrayList<>(Arrays.asList(
                ".Q..",
                "...Q",
                "Q...",
                "..Q."))));
    }

    @Test
    public void testNQueensPuzzle_1() {
        int n = 5;
        List<List<String>> result = new Solution().solveNQueens(n);
        assertEquals(10, result.size());
    }

    @Test
    public void testNQueensPuzzle_2() {
        int n = 6;
        List<List<String>> result = new Solution().solveNQueens(n);
        assertTrue(result.contains(new ArrayList<>(Arrays.asList(
                ".Q...",
                "Q...",
                "...Q",
                "..Q..",
                "Q...",
                ".Q..."))));
    }

    @Test
    public void testNQueensPuzzle_3() {
        int n = 7;
        List<List<String>> result = new Solution().solveNQueens(n);
        assertTrue(result.contains(new ArrayList<>(Arrays.asList(
                "..Q..",
                "...Q.",
                "Q...",
                "...Q",
                ".Q...",
                "Q...",
                "..Q."))));
    }

    @Test
    public void testNQueensPuzzle_4() {
        int n = 8;
        List<List<String>> result = new Solution().solveNQueens(n);
        assertTrue(result.contains(new ArrayList<>(Arrays.asList(
                "...Q.",
                "Q...",
                "..Q..",
                ".Q...",
                "Q...",
                "..Q.",
                "...Q",
                "Q..." ))));
    }
}