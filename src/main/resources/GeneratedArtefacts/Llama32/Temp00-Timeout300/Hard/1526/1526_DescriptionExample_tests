package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1526;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1526.Solution;
import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class DescriptionExampleTestsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[] target = {1, 2, 3, 2, 1};
        assertEquals(3, solution.minOperations(target));
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[] target = {3, 1, 1, 2};
        assertEquals(4, solution.minOperations(target));
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[] target = {3, 1, 5, 4, 2};
        assertEquals(7, solution.minOperations(target));
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[] target = {0, 0, 0, 0, 0};
        assertEquals(5, solution.minOperations(target));
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[] target = {1, 2, 3, 4, 5};
        assertEquals(15, solution.minOperations(target));
    }
}
