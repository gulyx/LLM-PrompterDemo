package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 1368_DescriptionOnly {

    @Test
    public void test_1() {
        int[][] grid = {{4,3,2},{3,2,1}};
        assertEquals(7, minCost(grid));
    }

    @Test
    public void test_2() {
        int[][] grid = {{0,0,0},{0,0,0}};
        assertEquals(2, minCost(grid));
    }

    @Test
    public void test_3() {
        int[][] grid = {{1,2},{4,5}};
        assertEquals(10, minCost(grid));
    }

    @Test
    public void test_4() {
        int[][] grid = {{0,1},{2,0}};
        assertEquals(8, minCost(grid));
    }

    @Test
    public void test_5() {
        int[][] grid = {{3,7,2},{3,7,7},{2,0,0}};
        assertEquals(15, minCost(grid));
    }
}