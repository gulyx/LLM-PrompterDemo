package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 1368_DescriptionOnlyTest {

    @Test
    public void test_1() {
        int[][] grid = {{4,3,2},{3,2,1}};
        assertEquals(7, minCost(grid));
    }

    @Test
    public void test_2() {
        int[][] grid = {{0,0,0},{0,0,0}};
        assertEquals(2, minCost(grid));
    }

    @Test
    public void test_3() {
        int[][] grid = {{1,2,3},{4,5,6},{7,8,9}};
        assertEquals(18, minCost(grid));
    }

    @Test
    public void test_4() {
        int[][] grid = {{0,1,2},{0,0,0},{0,0,0}};
        assertEquals(2, minCost(grid));
    }

    @Test
    public void test_5() {
        int[][] grid = {{3,8,1},{5,7,9},{4,10,12},{11,13,14},{15,17,18}};
        assertEquals(20, minCost(grid));
    }
}