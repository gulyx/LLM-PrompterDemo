package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;
public class 1255_DescriptionOnlyTest {

    @Test
    public void test1() {
        String[] words = {"abc", "de", "ghi"};
        int[] letters = {'a', 'b', 'c'};
        int[] score = {2, 3, 4};
        assertEquals(10, maxScore(words, letters, score));
    }

    @Test
    public void test2() {
        String[] words = {"abc", "de", "ghi"};
        int[] letters = {'a', 'b'};
        int[] score = {2, 3, 4};
        assertEquals(6, maxScore(words, letters, score));
    }

    @Test
    public void test3() {
        String[] words = {"abc", "de", "ghi"};
        int[] letters = {'a', 'b'};
        int[] score = {2, 5, 4};
        assertEquals(7, maxScore(words, letters, score));
    }

    @Test
    public void test4() {
        String[] words = {"abc", "de", "ghi"};
        int[] letters = {'a', 'b'};
        int[] score = {2, 5, 6};
        assertEquals(8, maxScore(words, letters, score));
    }

    @Test
    public void test5() {
        String[] words = {"abc", "de", "ghi"};
        int[] letters = {'a', 'b'};
        int[] score = {2, 5, 7};
        assertEquals(9, maxScore(words, letters, score));
    }
}