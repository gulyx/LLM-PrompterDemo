package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1944;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1944.Solution;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class 1944_DescriptionOnly_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[] heights = {1,3,6,9};
        int[] answer = solution.couldSeePersonRight(heights);
        assertArrayEquals(new int[]{2,1,0,4},answer);
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[] heights = {5,3,5,2};
        int[] answer = solution.couldSeePersonRight(heights);
        assertArrayEquals(new int[]{2,1,0,1},answer);
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[] heights = {4, 1, 5, 9, 5};
        int[] answer = solution.couldSeePersonRight(heights);
        assertArrayEquals(new int[]{2,0,1,0,0},answer);
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[] heights = {3,6,7,8,9};
        int[] answer = solution.couldSeePersonRight(heights);
        assertArrayEquals(new int[]{4,3,2,1,0},answer);
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[] heights = {6,7,1,2,20};
        int[] answer = solution.couldSeePersonRight(heights);
        assertArrayEquals(new int[]{0,1,1,0,0},answer);
    }
}