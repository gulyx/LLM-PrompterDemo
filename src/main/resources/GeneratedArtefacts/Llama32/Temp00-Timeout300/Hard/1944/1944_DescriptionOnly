package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;
public class 1944_DescriptionOnlyTest {

    @Test
    public void test_0_people() {
        int[] heights = new int[0];
        int[] answer = solution(heights);
        assertEquals(new int[]{}, answer);
    }

    @Test
    public void test_1_person() {
        int[] heights = {1};
        int[] answer = solution(heights);
        assertEquals(new int[]{0}, answer);
    }

    @Test
    public void test_2_people() {
        int[] heights = {1, 1};
        int[] answer = solution(heights);
        assertEquals(new int[]{0}, answer);
    }

    @Test
    public void test_3_people() {
        int[] heights = {1, 2, 3};
        int[] answer = solution(heights);
        assertArrayEquals(new int[]{2}, answer);
    }

    @Test
    public void test_n_people() {
        int[] heights = new int[1000];
        for (int i = 0; i < 1000; i++) {
            heights[i] = i;
        }
        int[] answer = solution(heights);
        assertArrayEquals(new int[]{999}, answer);
    }

}