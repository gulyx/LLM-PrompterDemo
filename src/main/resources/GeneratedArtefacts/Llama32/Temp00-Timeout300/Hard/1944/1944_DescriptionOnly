package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;
public class 1944_DescriptionOnly {

    @Test
    public void test_0() {
        int[] heights = {1,3,2,2,5};
        int[] answer = new int[heights.length];
        for (int i = 0; i < heights.length; i++) {
            int count = 0;
            for (int j = i + 1; j < heights.length; j++) {
                if (heights[i] > heights[j]) {
                    break;
                }
                count++;
            }
            answer[i] = count;
        }
        assertArrayEquals(new int[]{2, 1, 0, 0, 3}, answer);
    }

    @Test
    public void test_1() {
        int[] heights = {0,1,2,3,4};
        int[] answer = new int[heights.length];
        for (int i = 0; i < heights.length; i++) {
            int count = 0;
            for (int j = i + 1; j < heights.length; j++) {
                if (heights[i] > heights[j]) {
                    break;
                }
                count++;
            }
            answer[i] = count;
        }
        assertArrayEquals(new int[]{4,3,2,1,0}, answer);
    }

    @Test
    public void test_2() {
        int[] heights = {1, 1, 4, 2, 1, 3};
        int[] answer = new int[heights.length];
        for (int i = 0; i < heights.length; i++) {
            int count = 0;
            for (int j = i + 1; j < heights.length; j++) {
                if (heights[i] > heights[j]) {
                    break;
                }
                count++;
            }
            answer[i] = count;
        }
        assertArrayEquals(new int[]{4,3,2,0,3,1}, answer);
    }

    @Test
    public void test_3() {
        int[] heights = {1, 2, 3, 4, 5};
        int[] answer = new int[heights.length];
        for (int i = 0; i < heights.length; i++) {
            int count = 0;
            for (int j = i + 1; j < heights.length; j++) {
                if (heights[i] > heights[j]) {
                    break;
                }
                count++;
            }
            answer[i] = count;
        }
        assertArrayEquals(new int[]{4,3,2,1,0}, answer);
    }

    @Test
    public void test_4() {
        int[] heights = {5, 1, 2, 3, 4};
        int[] answer = new int[heights.length];
        for (int i = 0; i < heights.length; i++) {
            int count = 0;
            for (int j = i + 1; j < heights.length; j++) {
                if (heights[i] > heights[j]) {
                    break;
                }
                count++;
            }
            answer[i] = count;
        }
        assertArrayEquals(new int[]{4,0,0,0,0}, answer);
    }

}