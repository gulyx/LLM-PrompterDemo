```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class DescriptionExampleTest {

    @Test
    public void test_1() {
        int[] plantTime = {1, 4, 3};
        int[] growTime = {2, 3, 1};
        assertEquals(9, solve(plantTime, growTime));
    }

    @Test
    public void test_2() {
        int[] plantTime = {1, 2, 3, 2};
        int[] growTime = {2, 1, 2, 1};
        assertEquals(9, solve(plantTime, growTime));
    }

    @Test
    public void test_3() {
        int[] plantTime = {1};
        int[] growTime = {1};
        assertEquals(2, solve(plantTime, growTime));
    }

    @Test
    public void test_4() {
        int[] plantTime = {1, 2, 3};
        int[] growTime = {1, 2, 3};
        assertEquals(6, solve(plantTime, growTime));
    }

    @Test
    public void test_5() {
        int[] plantTime = {1, 1, 1};
        int[] growTime = {1, 1, 1};
        assertEquals(3, solve(plantTime, growTime));
    }
}

public class Solution {

    public int solve(int[] plantTime, int[] growTime) {
        int n = plantTime.length;
        long totalPlantDays = 0;
        for (int i : plantTime) {
            totalPlantDays += i;
        }

        long totalGrowDays = 0;
        for (int i : growTime) {
            totalGrowDays += i;
        }

        return Math.max(totalPlantDays, totalGrowDays);
    }
}
```