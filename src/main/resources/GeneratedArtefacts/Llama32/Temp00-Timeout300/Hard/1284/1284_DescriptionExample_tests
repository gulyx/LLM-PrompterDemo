package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1284;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1284.Solution;
import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class 1284_DescriptionExample_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[][] mat = {{0,0},{0,1}};
        assertEquals(3, solution.minFlips(mat));
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[][] mat = {{0}};
        assertEquals(0, solution.minFlips(mat));
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[][] mat = {{1,0,0},{1,0,0}};
        assertEquals(-1, solution.minFlips(mat));
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[][] mat = {{0,1},{1,0}};
        assertEquals(2, solution.minFlips(mat));
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[][] mat = {{0,0,0},{0,1,0},{0,0,0}};
        assertEquals(3, solution.minFlips(mat));
    }
}