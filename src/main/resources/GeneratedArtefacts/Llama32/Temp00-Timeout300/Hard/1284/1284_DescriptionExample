package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class 1284_DescriptionExample {

    @Test
    public void test_flip_all() {
        int[][] mat = {{0,0},{0,1}};
        assertEquals(3, flipAll(mat));
    }

    @Test
    public void test_zero_matrix() {
        int[][] mat = {{0}};
        assertEquals(0, flipAll(mat));
    }

    @Test
    public void test_flip_all_not_possible() {
        int[][] mat = {{1,0,0},{1,0,0}};
        assertEquals(-1, flipAll(mat));
    }

    @Test
    public void test_flip_one() {
        int[][] mat = {{0,1},{1,0}};
        assertEquals(2, flipAll(mat));
    }

    @Test
    public void test_flip_two() {
        int[][] mat = {{0,0,1},{0,1,0},{1,0,0}};
        assertEquals(3, flipAll(mat));
    }
}