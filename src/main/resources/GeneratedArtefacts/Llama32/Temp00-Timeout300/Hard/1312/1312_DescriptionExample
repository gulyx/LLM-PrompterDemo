```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class DescriptionExample {

    @Test
    public void testPalindromeSteps_0() {
        String s = "zzazz";
        int expected = 0;
        assertEquals(expected, minStepsToPalindrome(s));
    }

    @Test
    public void testPalindromeSteps_2() {
        String s = "mbadm";
        int expected = 2;
        assertEquals(expected, minStepsToPalindrome(s));
    }

    @Test
    public void testPalindromeSteps_5() {
        String s = "leetcode";
        int expected = 5;
        assertEquals(expected, minStepsToPalindrome(s));
    }

    @Test
    public void testPalindromeSteps_1() {
        String s = "abba";
        int expected = 0;
        assertEquals(expected, minStepsToPalindrome(s));
    }

    @Test
    public void testPalindromeSteps_3() {
        String s = "abcba";
        int expected = 0;
        assertEquals(expected, minStepsToPalindrome(s));
    }
}

public class Solution {

    public int minStepsToPalindrome(String s) {
        int n = s.length();
        char[] arr = s.toCharArray();

        for (int i = 0; i < n / 2; i++) {
            if (arr[i] != arr[n - i - 1]) {
                return n - i;
            }
        }

        return 0;
    }
}
```