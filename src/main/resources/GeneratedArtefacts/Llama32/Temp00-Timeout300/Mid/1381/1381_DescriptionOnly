package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class CustomStack_1381_DescriptionOnly {

    @Test
    public void testPush() {
        CustomStack customStack = new CustomStack(3);
        customStack.push(1);
        customStack.push(2);
        assertEquals(-1, customStack.pop());
        assertEquals(1, customStack.pop());
        assertEquals(2, customStack.pop());
    }

    @Test
    public void testPop() {
        CustomStack customStack = new CustomStack(3);
        customStack.push(1);
        customStack.push(2);
        assertEquals(-1, customStack.pop());
    }

    @Test
    public void testInc() {
        CustomStack customStack = new CustomStack(5);
        for (int i = 0; i < 10; i++) {
            customStack.push(i);
        }
        for (int i = 0; i < 3; i++) {
            customStack.inc(1, 2);
        }
        assertEquals(9, customStack.pop());
    }

    @Test
    public void testIncEmpty() {
        CustomStack customStack = new CustomStack(5);
        for (int i = 0; i < 10; i++) {
            customStack.push(i);
        }
        customStack.inc(1, 2);
        assertEquals(9, customStack.pop());
    }

    @Test
    public void testPushMaxSize() {
        CustomStack customStack = new CustomStack(3);
        for (int i = 0; i < 10; i++) {
            customStack.push(i);
        }
        assertEquals(-1, customStack.pop());
    }
}