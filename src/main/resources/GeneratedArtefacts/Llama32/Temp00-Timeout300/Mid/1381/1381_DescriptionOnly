package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class CustomStack_DescriptionOnlyTest {

    @Test
    public void testPush() {
        CustomStack customStack = new CustomStack(3);
        customStack.push(1);
        customStack.push(2);
        assertEquals(-1, customStack.pop());
    }

    @Test
    public void testPop() {
        CustomStack customStack = new CustomStack(3);
        customStack.push(1);
        customStack.push(2);
        assertEquals(2, customStack.pop());
        assertEquals(1, customStack.pop());
        assertEquals(-1, customStack.pop());
    }

    @Test
    public void testPushAndPop() {
        CustomStack customStack = new CustomStack(3);
        customStack.push(1);
        customStack.push(2);
        assertEquals(2, customStack.pop());
        customStack.push(3);
        assertEquals(-1, customStack.pop());
    }

    @Test
    public void testInc() {
        CustomStack customStack = new CustomStack(3);
        customStack.push(1);
        customStack.push(2);
        customStack.push(3);
        customStack.inc(0, 5);
        assertEquals(6, customStack.pop());
        assertEquals(7, customStack.pop());
        assertEquals(8, customStack.pop());
    }

    @Test
    public void testIncWithLessElements() {
        CustomStack customStack = new CustomStack(3);
        customStack.push(1);
        customStack.inc(0, 5);
        assertEquals(-1, customStack.pop());
    }
}