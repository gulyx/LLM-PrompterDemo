package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 1409_DescriptionOnlyTest {

    @Test
    public void test1() {
        int[] queries = {2, 1, 3};
        int[] result = new int[queries.length];
        for (int i = 0; i < queries.length; i++) {
            result[i] = findPosition(queries[i], queries);
        }
        assertArrayEquals(new int[]{2, 0, 3}, result);
    }

    @Test
    public void test2() {
        int[] queries = {4, 1, 2};
        int[] result = new int[queries.length];
        for (int i = 0; i < queries.length; i++) {
            result[i] = findPosition(queries[i], queries);
        }
        assertArrayEquals(new int[]{4, 0, 1}, result);
    }

    @Test
    public void test3() {
        int[] queries = {2, 7, 5};
        int[] result = new int[queries.length];
        for (int i = 0; i < queries.length; i++) {
            result[i] = findPosition(queries[i], queries);
        }
        assertArrayEquals(new int[]{2, 4, 5}, result);
    }

    @Test
    public void test4() {
        int[] queries = {1, 2, 3};
        int[] result = new int[queries.length];
        for (int i = 0; i < queries.length; i++) {
            result[i] = findPosition(queries[i], queries);
        }
        assertArrayEquals(new int[]{1, 2, 3}, result);
    }

    @Test
    public void test5() {
        int[] queries = {10, 4, 9};
        int[] result = new int[queries.length];
        for (int i = 0; i < queries.length; i++) {
            result[i] = findPosition(queries[i], queries);
        }
        assertArrayEquals(new int[]{10, 4, 9}, result);
    }

    private int findPosition(int num, int[] queries) {
        int pos = Arrays.binarySearch(queries, num);
        if (pos < 0) {
            pos = -pos - 1;
        }
        return pos;
    }
}