package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 2433_DescriptionOnlyTest {

    @Test
    public void test_XorArray() {
        int[] pref = {1, 2, 4};
        int[] arr = new int[pref.length];
        for (int i = 0; i < pref.length; i++) {
            arr[i] = pref[0]^pref[1]^...^pref[i];
        }
        assertArrayEquals(arr, new int[]{1, 3, 7});
    }

    @Test
    public void test_XorArray_2() {
        int[] pref = {10, 20, 40};
        int[] arr = new int[pref.length];
        for (int i = 0; i < pref.length; i++) {
            arr[i] = pref[0]^pref[1]^...^pref[i];
        }
        assertArrayEquals(arr, new int[]{10, 30, 62});
    }

    @Test
    public void test_XorArray_3() {
        int[] pref = {5, 25, 125};
        int[] arr = new int[pref.length];
        for (int i = 0; i < pref.length; i++) {
            arr[i] = pref[0]^pref[1]^...^pref[i];
        }
        assertArrayEquals(arr, new int[]{5, 30, 255});
    }

    @Test
    public void test_XorArray_4() {
        int[] pref = {2, 6, 14};
        int[] arr = new int[pref.length];
        for (int i = 0; i < pref.length; i++) {
            arr[i] = pref[0]^pref[1]^...^pref[i];
        }
        assertArrayEquals(arr, new int[]{2, 8, 30});
    }

    @Test
    public void test_XorArray_5() {
        int[] pref = {7, 35, 175};
        int[] arr = new int[pref.length];
        for (int i = 0; i < pref.length; i++) {
            arr[i] = pref[0]^pref[1]^...^pref[i];
        }
        assertArrayEquals(arr, new int[]{7, 42, 312});
    }

}