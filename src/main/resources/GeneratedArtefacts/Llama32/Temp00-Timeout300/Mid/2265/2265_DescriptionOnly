package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;
import java.util.Arrays;

public class 2265_DescriptionOnlyTest {

    @Test
    public void testAverageOfSubtree() {
        TreeNode root = new TreeNode(3);
        root.left = new TreeNode(1);
        root.right = new TreeNode(2);
        root.left.left = new TreeNode(0);
        root.left.right = new TreeNode(4);
        int expected = 2;
        assertEquals(expected, averageOfSubtrees(root));
    }

    @Test
    public void testAverageOfSubtree_OnlyOneNode() {
        TreeNode root = new TreeNode(1);
        int expected = 1;
        assertEquals(expected, averageOfSubtrees(root));
    }

    @Test
    public void testAverageOfSubtree_EmptyTree() {
        TreeNode root = null;
        int expected = 0;
        assertEquals(expected, averageOfSubtrees(root));
    }

    @Test
    public void testAverageOfSubtree_MultipleNodes() {
        TreeNode root = new TreeNode(3);
        root.left = new TreeNode(1);
        root.right = new TreeNode(2);
        root.left.left = new TreeNode(0);
        root.left.right = new TreeNode(4);
        int expected = 2;
        assertEquals(expected, averageOfSubtrees(root));
    }

    @Test
    public void testAverageOfSubtree_MultipleNodesAndEmptyTree() {
        TreeNode root = new TreeNode(3);
        root.left = new TreeNode(1);
        root.right = new TreeNode(2);
        root.left.left = new TreeNode(0);
        root.left.right = new TreeNode(4);
        int expected = 2;
        assertEquals(expected, averageOfSubtrees(root));
    }
}

class TreeNode {
    int val;
    TreeNode left;
    TreeNode right;
    TreeNode(int x) { val = x; }
}