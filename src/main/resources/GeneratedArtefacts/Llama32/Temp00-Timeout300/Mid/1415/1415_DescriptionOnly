package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import java.util.*;

public class DescriptionOnly {

    public List<String> getHappyStrings(int n, int k) {
        List<String> happyStrings = new ArrayList<>();
        for (int length = 1; length <= n; length++) {
            char[] chars = new char[length];
            Arrays.fill(chars, 'a');
            backtrack(happyStrings, chars, 0);
        }
        Collections.sort(happyStrings);
        return happyStrings.subList(0, k);
    }

    private void backtrack(List<String> happyStrings, char[] chars, int index) {
        if (index == chars.length - 1) {
            happyStrings.add(new String(chars));
            return;
        }
        for (char c = 'a'; c <= 'c'; c++) {
            chars[index] = c;
            backtrack(happyStrings, chars, index + 1);
        }
    }

}