package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import java.util.*;

public class DescriptionExample {

    public static void main(String[] args) {
        System.out.println(new Solution().getHappyString(1, 3));
        System.out.println(new Solution().getHappyString(1, 4));
        System.out.println(new Solution().getHappyString(3, 9));
    }
}

class Solution {
    private List<String> res = new ArrayList<>();
    public String getHappyString(int n, int k) {
        generate(n);
        return (k <= res.size()) ? res.get(k - 1) : "";
    }

    private void generate(int n) {
        if (n == 0) {
            res.add("");
            return;
        }
        for (char c = 'a'; c <= 'c'; c++) {
            generate(n - 1);
            StringBuilder sb = new StringBuilder(res.get(res.size() - 1));
            sb.append(c);
            res.add(sb.toString());
        }
    }
}