```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class DescriptionExampleTest {

    @Test
    public void test1() {
        int[] boxes = {0, 1, 0};
        int[] answer = new int[boxes.length];
        for (int i = 0; i < boxes.length; i++) {
            if (boxes[i] == 1) {
                answer[i]++;
            }
        }
        assertArrayEquals(new int[]{1, 2, 1}, answer);
    }

    @Test
    public void test2() {
        int[] boxes = {0, 0, 1, 0, 0, 1, 1, 0};
        int[] answer = new int[boxes.length];
        for (int i = 0; i < boxes.length; i++) {
            if (boxes[i] == 1) {
                answer[i]++;
            }
        }
        assertArrayEquals(new int[]{4, 3, 2, 2, 2, 3, 4}, answer);
    }

    @Test
    public void test3() {
        int[] boxes = {0, 0, 1, 0, 0, 1, 1, 0};
        int[] answer = new int[boxes.length];
        for (int i = 0; i < boxes.length; i++) {
            if (boxes[i] == 1) {
                answer[i]++;
            }
        }
        assertArrayEquals(new int[]{4, 3, 2, 2, 2, 3, 4}, answer);
    }

    @Test
    public void test4() {
        int[] boxes = {0, 0, 1, 0, 0, 1, 1, 0};
        int[] answer = new int[boxes.length];
        for (int i = 0; i < boxes.length; i++) {
            if (boxes[i] == 1) {
                answer[i]++;
            }
        }
        assertArrayEquals(new int[]{4, 3, 2, 2, 2, 3, 4}, answer);
    }

    @Test
    public void test5() {
        int[] boxes = {0, 0, 1, 0, 0, 1, 1, 0};
        int[] answer = new int[boxes.length];
        for (int i = 0; i < boxes.length; i++) {
            if (boxes[i] == 1) {
                answer[i]++;
            }
        }
        assertArrayEquals(new int[]{4, 3, 2, 2, 2, 3, 4}, answer);
    }

}
