package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1769;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1769.Solution;
import org.junit.Test;
import static org.junit.Assert.*;

public class 1769_DescriptionExample_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        String boxes = "110";
        int[] answer = solution.minOperations(boxes);
        assertArrayEquals(new int[]{1,1,3}, answer);
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        String boxes = "001011";
        int[] answer = solution.minOperations(boxes);
        assertArrayEquals(new int[]{11,8,5,4,3,4}, answer);
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        String boxes = "0000";
        int[] answer = solution.minOperations(boxes);
        assertArrayEquals(new int[]{0,0,0,0}, answer);
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        String boxes = "1111";
        int[] answer = solution.minOperations(boxes);
        assertArrayEquals(new int[]{4,4,4,4}, answer);
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        String boxes = "0000";
        int[] answer = solution.minOperations(boxes);
        assertArrayEquals(new int[]{0,0,0,0}, answer);
    }
}