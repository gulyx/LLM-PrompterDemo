```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class DescriptionExampleTest {

    @Test
    public void test1() {
        String s = "abcd";
        int k = 2;
        String result = solution(s, k);
        assertEquals("bf", result);
    }

    @Test
    public void test2() {
        String s = "mxz";
        int k = 3;
        String result = solution(s, k);
        assertEquals("i", result);
    }

    @Test
    public void test3() {
        String s = "abcdefghijklmnopqrstuvwxyz";
        int k = 26;
        String result = solution(s, k);
        assertEquals("", result);
    }

    @Test
    public void test4() {
        String s = "aabbcc";
        int k = 2;
        String result = solution(s, k);
        assertEquals("i", result);
    }

    @Test
    public void test5() {
        String s = "abcdefghijklmnopqrstuvwxyzabcdefghijklmnopqrstuvwxyz";
        int k = 26;
        String result = solution(s, k);
        assertEquals("", result);
    }
}

public class Solution {

    public String solution(String s, int k) {
        StringBuilder result = new StringBuilder();
        for (int i = 0; i < s.length(); i += k) {
            StringBuilder substring = new StringBuilder(s.substring(i, Math.min(i + k, s.length())));
            int sum = 0;
            for (char c : substring.toString().toCharArray()) {
                sum += c - 'a';
            }
            int hashedChar = sum % 26;
            result.append((char) ('a' + hashedChar));
        }
        return result.toString();
    }
}
```