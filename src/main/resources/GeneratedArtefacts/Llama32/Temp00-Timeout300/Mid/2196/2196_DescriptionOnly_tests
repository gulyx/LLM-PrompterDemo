package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;
public class 2196_DescriptionOnlyTest {

    @Test
    public void test1() {
        int[][] descriptions = {{0, 1, 1}, {0, 2, 0}};
        Node root = new Solution().constructTree(descriptions);
        assertNotNull(root);
    }

    @Test
    public void test2() {
        int[][] descriptions = {{0, 1, 1}, {0, 2, 0}, {1, 3, 1}, {2, 4, 0}};
        Node root = new Solution().constructTree(descriptions);
        assertNotNull(root);
    }

    @Test
    public void test3() {
        int[][] descriptions = {{0, 1, 1}, {0, 2, 0}, {1, 3, 1}, {2, 4, 0}, {3, 5, 1}};
        Node root = new Solution().constructTree(descriptions);
        assertNotNull(root);
    }

    @Test
    public void test4() {
        int[][] descriptions = {{0, 1, 1}, {0, 2, 0}, {1, 3, 1}, {2, 4, 0}};
        Node root = new Solution().constructTree(descriptions);
        assertEquals(5, root.val);
    }

    @Test
    public void test5() {
        int[][] descriptions = {{0, 1, 1}, {0, 2, 0}, {1, 3, 1}, {2, 4, 0}};
        Node root = new Solution().constructTree(descriptions);
        assertEquals(4, root.left.val);
    }
}

