package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 807_DescriptionOnlyTest {

    @Test
    public void test_1() {
        int[][] grid = {{3,0,8},{4,2,6},{5,3,3}};
        assertEquals(24, maxIncreaseHeight(grid));
    }

    @Test
    public void test_2() {
        int[][] grid = {{3,0,0,8},{3,2,0,0},{0,3,0,0},{9,0,0,0}};
        assertEquals(32, maxIncreaseHeight(grid));
    }

    @Test
    public void test_3() {
        int[][] grid = {{0,1,4},{5,3,0},{6,8,7}};
        assertEquals(20, maxIncreaseHeight(grid));
    }

    @Test
    public void test_4() {
        int[][] grid = {{3,0,0,0},{2,2,0,0},{0,0,1,0},{0,0,0,2}};
        assertEquals(28, maxIncreaseHeight(grid));
    }

    @Test
    public void test_5() {
        int[][] grid = {{100,100,100},{100,100,100},{100,100,100}};
        assertEquals(20000, maxIncreaseHeight(grid));
    }
}