package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 807_DescriptionOnly {

    @Test
    public void test_1() {
        int[][] grid = {{3,0,8},{4,2,6},{5,3,3}};
        assertEquals(24, maxIncreaseHeight(grid));
    }

    @Test
    public void test_2() {
        int[][] grid = {{3,0,0,0},{3,2,2,2},{3,3,3,3},{3,0,0,0}};
        assertEquals(18, maxIncreaseHeight(grid));
    }

    @Test
    public void test_3() {
        int[][] grid = {{1,2,3},{4,5,6},{7,8,9}};
        assertEquals(45, maxIncreaseHeight(grid));
    }

    @Test
    public void test_4() {
        int[][] grid = {{0,0,0},{0,0,0},{0,0,0}};
        assertEquals(0, maxIncreaseHeight(grid));
    }

    @Test
    public void test_5() {
        int[][] grid = {{100,0,0},{0,100,0},{0,0,100}};
        assertEquals(200, maxIncreaseHeight(grid));
    }
}