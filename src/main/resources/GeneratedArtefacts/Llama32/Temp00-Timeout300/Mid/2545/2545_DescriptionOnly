```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertArrayEquals;

public class 2545_DescriptionOnly {

    @Test
    public void testSortStudentsByScore() {
        int[][] score = {{100,80,70},{50,40,30},{25,20,15}};
        int k = 1;
        int[][] expected = {{100,80,70},{50,40,30},{25,20,15}};
        assertArrayEquals(expected, sortStudentsByScore(score, k));
    }

    @Test
    public void testSortStudentsByScore_KthExam() {
        int[][] score = {{10,9,8},{5,4,3},{1,2,0}};
        int k = 2;
        int[][] expected = {{10,9,8},{5,4,3},{1,2,0}};
        assertArrayEquals(expected, sortStudentsByScore(score, k));
    }

    @Test
    public void testSortStudentsByScore_EmptyMatrix() {
        int[][] score = {};
        int k = 0;
        int[][] expected = {};
        assertArrayEquals(expected, sortStudentsByScore(score, k));
    }

    @Test
    public void testSortStudentsByScore_SingleStudent() {
        int[][] score = {{100}};
        int k = 0;
        int[][] expected = {{100}};
        assertArrayEquals(expected, sortStudentsByScore(score, k));
    }

    @Test
    public void testSortStudentsByScore_MultipleExams() {
        int[][] score = {{10,9,8,7},{5,4,3,2},{1,2,0,0}};
        int k = 3;
        int[][] expected = {{10,9,8,7},{5,4,3,2},{1,2,0,0}};
        assertArrayEquals(expected, sortStudentsByScore(score, k));
    }
}
```