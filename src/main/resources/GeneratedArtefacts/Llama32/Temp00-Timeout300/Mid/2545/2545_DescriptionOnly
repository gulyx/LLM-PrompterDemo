```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertArrayEquals;

public class 2545_DescriptionOnlyTest {

    @Test
    public void testSortStudentsByScore() {
        int[][] score = {{1,2,3},{4,5,6},{7,8,9}};
        int k = 0;
        int[][] expected = {{7,8,9},{4,5,6},{1,2,3}};
        assertArrayEquals(expected, sortStudentsByScore(score, k));
    }

    @Test
    public void testSortStudentsByScore_kIsLastExam() {
        int[][] score = {{10,20,30},{40,50,60},{70,80,90}};
        int k = 2;
        int[][] expected = {{70,80,90},{40,50,60},{10,20,30}};
        assertArrayEquals(expected, sortStudentsByScore(score, k));
    }

    @Test
    public void testSortStudentsByScore_kIsFirstExam() {
        int[][] score = {{1,2,3},{4,5,6},{7,8,9}};
        int k = 0;
        int[][] expected = {{1,2,3},{4,5,6},{7,8,9}};
        assertArrayEquals(expected, sortStudentsByScore(score, k));
    }

    @Test
    public void testSortStudentsByScore_emptyMatrix() {
        int[][] score = {};
        int k = 0;
        int[][] expected = {};
        assertArrayEquals(expected, sortStudentsByScore(score, k));
    }

    @Test
    public void testSortStudentsByScore_singleExam() {
        int[][] score = {{1},{2},{3}};
        int k = 0;
        int[][] expected = {{3},{2},{1}};
        assertArrayEquals(expected, sortStudentsByScore(score, k));
    }
}
```