package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 1329_DescriptionOnly {

    @Test
    public void testDiagonalSort() {
        int[][] mat = {{3,3,1,1},{2,2,1,2}};
        int[][] result = diagonalSort(mat);
        assertArrayEquals(new int[]{[1, 1, 2, 2], [1, 2, 3, 3]}, result);
    }

    @Test
    public void testDiagonalSort_2x4() {
        int[][] mat = {{1,2,3,4},{5,6,7,8}};
        int[][] result = diagonalSort(mat);
        assertArrayEquals(new int[]{[1, 2, 3, 4], [5, 6, 7, 8]}, result);
    }

    @Test
    public void testDiagonalSort_3x3() {
        int[][] mat = {{1,2,3},{4,5,6},{7,8,9}};
        int[][] result = diagonalSort(mat);
        assertArrayEquals(new int[]{[1, 2, 3], [4, 5, 6], [7, 8, 9]}, result);
    }

    @Test
    public void testDiagonalSort_1x1() {
        int[][] mat = {{1}};
        int[][] result = diagonalSort(mat);
        assertArrayEquals(new int[]{[1]}, result);
    }

    @Test
    public void testDiagonalSort_EmptyMatrix() {
        int[][] mat = {};
        int[][] result = diagonalSort(mat);
        assertArrayEquals(result, result);
    }
}