package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class DescriptionOnlyTest {

    @Test
    public void testDiagonalSort() {
        int[][] mat = {{3, 1}, {2, 4}};
        int[][] result = diagonalSort(mat);
        assertArrayEquals(new int[]{[2, 4], [3, 1]}, result);
    }

    @Test
    public void testDiagonalSort_2x3() {
        int[][] mat = {{5, 9, 3}, {8, 7, 6}};
        int[][] result = diagonalSort(mat);
        assertArrayEquals(new int[]{[3, 6, 7], [5, 8, 9]}, result);
    }

    @Test
    public void testDiagonalSort_1x2() {
        int[][] mat = {{10}, {20}};
        int[][] result = diagonalSort(mat);
        assertArrayEquals(new int[]{[10, 20]}, result);
    }

    @Test
    public void testDiagonalSort_EmptyMatrix() {
        int[][] mat = {};
        int[][] result = diagonalSort(mat);
        assertArrayEquals(result, mat);
    }

    @Test
    public void testDiagonalSort_SingleElement() {
        int[][] mat = {{1}};
        int[][] result = diagonalSort(mat);
        assertArrayEquals(new int[]{[1]}, result);
    }
}