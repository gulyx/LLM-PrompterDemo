package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class 1689_DescriptionExample {

    @Test
    public void test_1() {
        String n = "32";
        int expected = 3;
        int actual = minPartitions(n);
        assertEquals(expected, actual);
    }

    @Test
    public void test_2() {
        String n = "82734";
        int expected = 8;
        int actual = minPartitions(n);
        assertEquals(expected, actual);
    }

    @Test
    public void test_3() {
        String n = "27346209830709182346";
        int expected = 9;
        int actual = minPartitions(n);
        assertEquals(expected, actual);
    }

    @Test
    public void test_4() {
        String n = "1";
        int expected = 1;
        int actual = minPartitions(n);
        assertEquals(expected, actual);
    }

    @Test
    public void test_5() {
        String n = "0";
        int expected = 0;
        int actual = minPartitions(n);
        assertEquals(expected, actual);
    }
    
    private int minPartitions(String n) {
        return (int)Math.ceil(Math.log10(Integer.parseInt(n)) / Math.log10(2));
    }
}