```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2442;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2442.Solution;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertThrows;

public class 2442_DescriptionOnly_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[] nums = {100, 200, 300};
        assertEquals(2, solution.descriptionOnly(nums));
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[] nums = {1000, 2000, 3000};
        assertEquals(3, solution.descriptionOnly(nums));
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[] nums = {1234, 5678, 9012};
        assertEquals(6, solution.descriptionOnly(nums));
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[] nums = {};
        assertEquals(0, solution.descriptionOnly(nums));
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        assertThrows(NullPointerException.class, () -> solution.descriptionOnly(null));
    }
}
