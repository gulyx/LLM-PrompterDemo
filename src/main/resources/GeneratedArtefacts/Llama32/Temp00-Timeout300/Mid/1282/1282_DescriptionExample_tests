package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1282;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1282.Solution;
import org.junit.Test;
import static org.junit.Assert.*;

public class 1282_DescriptionExample_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[] groupSizes = {3,3,3,3,3,1,3};
        Object result = solution.groupThePeople(groupSizes);
        assertEquals(new int[][]{{5},{0,1,2},{3,4,6}}, result);
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[] groupSizes = {2,1,3,3,3,2};
        Object result = solution.groupThePeople(groupSizes);
        assertEquals(new int[][]{{1},{0,5},{2,3,4}}, result);
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[] groupSizes = {1,1,1,1,1};
        Object result = solution.groupThePeople(groupSizes);
        assertEquals(new int[][]{{0},{1},{2},{3},{4}}, result);
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[] groupSizes = {5,5,5,5,5};
        Object result = solution.groupThePeople(groupSizes);
        assertEquals(new int[][]{{0},{1},{2},{3},{4},{5}}, result);
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[] groupSizes = {1,2,3,4,5};
        Object result = solution.groupThePeople(groupSizes);
        assertEquals(new int[][]{{0},{1},{2},{3},{4},{5}}, result);
    }
}
