package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import java.util.*;

public class 1282_DescriptionOnlyTest {

    public static void main(String[] args) {
        List<List<Integer>> result = new ArrayList<>();
        List<Integer> groupSizes = Arrays.asList(3,3,1,2,2);
        System.out.println(groupIntoGroups(groupSizes, result));
    }

    public static List<List<Integer>> groupIntoGroups(int[] groupSizes) {
        Map<Integer, List<Integer>> map = new HashMap<>();
        for (int i = 0; i < groupSizes.length; i++) {
            if (!map.containsKey(groupSizes[i])) {
                map.put(groupSizes[i], new ArrayList<>());
            }
            map.get(groupSizes[i]).add(i);
        }

        List<List<Integer>> result = new ArrayList<>();
        for (List<Integer> list : map.values()) {
            while (list.size() > 0) {
                int size = list.size();
                List<Integer> group = new ArrayList<>(size);
                for (int i = 0; i < size; i++) {
                    group.add(list.remove(0));
                }
                result.add(group);
            }
        }

        return result;
    }
}