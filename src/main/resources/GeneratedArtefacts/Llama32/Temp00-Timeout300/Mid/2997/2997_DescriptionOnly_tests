package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2997;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2997.Solution;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertThrows;

public class DescriptionOnly_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[] nums = {5, 2};
        int k = 4;
        assertEquals(2, solution.minOperations(nums, k));
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[] nums = {1, 3};
        int k = 6;
        assertEquals(5, solution.minOperations(nums, k));
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[] nums = {2, 7, 4, 1, 8, 1};
        int k = 0;
        assertEquals(10, solution.minOperations(nums, k));
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[] nums = {5, 2, 6, 4};
        int k = 7;
        assertEquals(3, solution.minOperations(nums, k));
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[] nums = {1, 0, 1, 0};
        int k = 2;
        assertEquals(2, solution.minOperations(nums, k));
    }
}