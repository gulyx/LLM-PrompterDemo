import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2997.Solution;
import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[] nums = {2, 1, 3, 4};
        int k = 1;
        assertEquals(2, solution.minOperations(nums, k));
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[] nums = {2, 0, 2, 0};
        int k = 0;
        assertEquals(0, solution.minOperations(nums, k));
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[] nums = {1, 2, 4, 8};
        int k = 5;
        assertEquals(2, solution.minOperations(nums, k));
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[] nums = {0, 1, 2, 3};
        int k = 6;
        assertEquals(3, solution.minOperations(nums, k));
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[] nums = {10, 20, 30, 40};
        int k = 50;
        assertEquals(4, solution.minOperations(nums, k));
    }
}
