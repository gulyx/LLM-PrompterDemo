package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 2044_DescriptionExample {

    @Test
    public void test_1() {
        int[] nums = {3,1};
        int expected = 2;
        assertEquals(expected, findMaximumOR(nums));
    }

    @Test
    public void test_2() {
        int[] nums = {2,2,2};
        int expected = 7;
        assertEquals(expected, findMaximumOR(nums));
    }

    @Test
    public void test_3() {
        int[] nums = {3,2,1,5};
        int expected = 6;
        assertEquals(expected, findMaximumOR(nums));
    }

    @Test
    public void test_4() {
        int[] nums = {0,1,2,3};
        int expected = 7;
        assertEquals(expected, findMaximumOR(nums));
    }

    @Test
    public void test_5() {
        int[] nums = {};
        int expected = 0;
        assertEquals(expected, findMaximumOR(nums));
    }
}

public class Solution {

    public int findMaximumOR(int[] nums) {
        int maxOr = 0;
        for (int num : nums) {
            maxOr |= num;
        }

        int count = 1 << (Integer.bitCount(maxOr));

        return count - 1;
    }
}