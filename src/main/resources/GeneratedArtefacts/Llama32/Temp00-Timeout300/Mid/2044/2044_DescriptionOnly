package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 2044_DescriptionOnly {

    @Test
    public void test_1() {
        int[] nums = {1, 2, 3};
        assertEquals(9, findMaximumOR(nums));
    }

    @Test
    public void test_2() {
        int[] nums = {0, 1, 2, 3};
        assertEquals(15, findMaximumOR(nums));
    }

    @Test
    public void test_3() {
        int[] nums = {1, 1, 1, 1};
        assertEquals(15, findMaximumOR(nums));
    }

    @Test
    public void test_4() {
        int[] nums = {0, 0, 0, 0};
        assertEquals(0, findMaximumOR(nums));
    }

    @Test
    public void test_5() {
        int[] nums = {};
        assertEquals(0, findMaximumOR(nums));
    }
}

public class Solution {

    public int findMaximumOR(int[] nums) {
        int maxOr = 0;
        for (int num : nums) {
            maxOr |= num;
        }

        int count = 1 << (Integer.bitCount(maxOr));

        return count;
    }
}