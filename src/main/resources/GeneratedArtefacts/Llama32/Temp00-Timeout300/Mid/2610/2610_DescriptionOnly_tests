```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2610;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2610.Solution;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class DescriptionOnly_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[] nums = {1, 2, 3, 4};
        int[][] result = solution.descriptionOnly(nums);
        assertEquals(2, result.length);
        assertTrue(result[0].length == 2 && result[1].length == 2);
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[] nums = {1, 1, 1, 1};
        int[][] result = solution.descriptionOnly(nums);
        assertEquals(1, result.length);
        assertTrue(result[0].length == 4);
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[] nums = {1, 2, 3, 4, 5};
        int[][] result = solution.descriptionOnly(nums);
        assertEquals(2, result.length);
        assertTrue(result[0].length == 2 && result[1].length == 3);
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[] nums = {1, 1, 1, 1, 1};
        int[][] result = solution.descriptionOnly(nums);
        assertEquals(1, result.length);
        assertTrue(result[0].length == 5);
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[] nums = {1, 2, 3, 4, 5, 6};
        int[][] result = solution.descriptionOnly(nums);
        assertEquals(3, result.length);
        assertTrue(result[0].length == 2 && result[1].length == 3 && result[2].length == 1);
    }
}
```