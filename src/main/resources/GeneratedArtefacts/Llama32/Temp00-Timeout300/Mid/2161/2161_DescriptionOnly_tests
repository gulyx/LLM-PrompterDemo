package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2161;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2161.Solution;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class 2161_DescriptionOnly_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[] nums = {2,7,4,3,6,8};
        int pivot = 4;
        int[] result = solution.reorderArray(nums,pivot);
        assertArrayEquals(new int[]{2,4,3,7,8,6},result);
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[] nums = {1,2,3};
        int pivot = 2;
        int[] result = solution.reorderArray(nums,pivot);
        assertArrayEquals(new int[]{1,3,2},result);
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[] nums = {4,5,6,7};
        int pivot = 4;
        int[] result = solution.reorderArray(nums,pivot);
        assertArrayEquals(new int[]{4,5,6,7},result);
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[] nums = {1,2,3,4};
        int pivot = 3;
        int[] result = solution.reorderArray(nums,pivot);
        assertArrayEquals(new int[]{1,3,2,4},result);
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[] nums = {1,1,1};
        int pivot = 1;
        int[] result = solution.reorderArray(nums,pivot);
        assertArrayEquals(new int[]{1,1,1},result);
    }
}