package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 2326_DescriptionOnlyTest {

    @Test
    public void testGenerateMatrix() {
        int[][] result = generateMatrix(3, 2);
        int[][] expected = {{1, 2}, {-1, -1}, {-1, 3}};
        assertArrayEquals(expected, result);
    }

    @Test
    public void testGenerateMatrix_OnlyOneElement() {
        int[][] result = generateMatrix(1, 1);
        int[][] expected = {{1}};
        assertArrayEquals(expected, result);
    }

    @Test
    public void testGenerateMatrix_EmptyList() {
        int[][] result = generateMatrix(3, 2);
        int[][] expected = {{-1, -1}, {-1, -1}, {-1, -1}};
        assertArrayEquals(expected, result);
    }

    @Test
    public void testGenerateMatrix_SingleRow() {
        int[][] result = generateMatrix(1, 3);
        int[][] expected = {{1, 2, 3}};
        assertArrayEquals(expected, result);
    }

    @Test
    public void testGenerateMatrix_SingleColumn() {
        int[][] result = generateMatrix(3, 1);
        int[][] expected = {{1}, {2}, {3}};
        assertArrayEquals(expected, result);
    }
}