package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2482;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.2482.Solution;
import org.junit.Test;
import static org.junit.Assert.*;

public class 2482_DescriptionExample_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[][] grid = {{0,1,1},{1,0,1},{0,0,1}};
        int[][] expected = {{0,0,4},{0,0,4},{-2,-2,2}};
        int[][] result = solution.diff(grid);
        assertArrayEquals(expected, result);
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[][] grid = {{1,1,1},{1,1,1}};
        int[][] expected = {{5,5,5},{5,5,5}};
        int[][] result = solution.diff(grid);
        assertArrayEquals(expected, result);
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[][] grid = {{0,1},{1,0}};
        int[][] expected = {{2,2},{2,2}};
        int[][] result = solution.diff(grid);
        assertArrayEquals(expected, result);
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[][] grid = {{1,0},{0,1}};
        int[][] expected = {{2,2},{2,2}};
        int[][] result = solution.diff(grid);
        assertArrayEquals(expected, result);
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[][] grid = {{0,0},{0,0}};
        int[][] expected = {{0,0},{0,0}};
        int[][] result = solution.diff(grid);
        assertArrayEquals(expected, result);
    }
}
