```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class 2785_DescriptionExample {

    public String sortString(String s) {
        char[] vowels = {'a', 'e', 'i', 'o', 'u', 'A', 'E', 'I', 'O', 'U'};
        int[] vowelCounts = new int[10];
        for (char c : s.toCharArray()) {
            if (vowels.includes(c)) {
                vowelCounts[c - 'a']++;
            }
        }

        StringBuilder result = new StringBuilder();
        for (int i = 0; i < vowelCounts.length; i++) {
            while (vowelCounts[i]-- > 0) {
                result.append(vowels[i]);
            }
        }

        return s.replaceFirst("[aeiouAEIOU]", result.toString());
    }

    @Test
    public void test1() {
        String input = "lEetcOde";
        String expectedOutput = "lEOtcede";
        assertEquals(expectedOutput, sortString(input));
    }

    @Test
    public void test2() {
        String input = "lYmpH";
        String expectedOutput = "lYmpH";
        assertEquals(expectedOutput, sortString(input));
    }

    @Test
    public void test3() {
        String input = "HelloWorld";
        String expectedOutput = "dlroWolleH";
        assertEquals(expectedOutput, sortString(input));
    }

    @Test
    public void test4() {
        String input = "abcdeFFAA";
        String expectedOutput = "abccdeFFOOaA";
        assertEquals(expectedOutput, sortString(input));
    }

    @Test
    public void test5() {
        String input = "aabbCCDD";
        String expectedOutput = "aaBBCCDdD";
        assertEquals(expectedOutput, sortString(input));
    }
}
```