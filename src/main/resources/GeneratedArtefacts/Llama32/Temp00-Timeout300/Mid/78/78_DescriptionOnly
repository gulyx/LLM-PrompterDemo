package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class '78_DescriptionOnly' {

    @Test
    public void testPowerSet_EmptyArray_ReturnsEmptyList() {
        int[] nums = {};
        assertEquals(1, nums.length);
    }

    @Test
    public void testPowerSet_SingleElement_ReturnsTwoSubsets() {
        int[] nums = {1};
        String expected = "[[], [1]]";
        assertArrayEquals(expected.toCharArray(), new String(nums).toCharArray());
    }

    @Test
    public void testPowerSet_MultipleElements_ReturnsCorrectPowerSet() {
        int[] nums = {1, 2, 3};
        String expected = "[[], [1], [1, 2], [1, 2, 3], [1, 3], [2], [2, 3], [3]]";
        assertArrayEquals(expected.toCharArray(), new String(nums).toCharArray());
    }

    @Test
    public void testPowerSet_NullArray_ThrowsNullPointerException() {
        int[] nums = null;
        try {
            new String(nums);
            fail("Expected NullPointerException");
        } catch (NullPointerException e) {
            // expected
        }
    }

    @Test
    public void testPowerSet_DuplicateElements_ReturnsCorrectPowerSet() {
        int[] nums = {1, 2, 2};
        String expected = "[[], [1], [1, 2], [1, 2, 2], [1, 2], [2], [2, 2], [2]]";
        assertArrayEquals(expected.toCharArray(), new String(nums).toCharArray());
    }
}