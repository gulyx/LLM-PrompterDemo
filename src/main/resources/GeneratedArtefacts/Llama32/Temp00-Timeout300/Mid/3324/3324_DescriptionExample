package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 3324_DescriptionExampleTest {

    @Test
    public void test1() {
        String target = "abc";
        String[] result = leetCodeSolution(target);
        assertEquals("a", result[0]);
        assertEquals("aa", result[1]);
        assertEquals("ab", result[2]);
        assertEquals("aba", result[3]);
        assertEquals("abb", result[4]);
        assertEquals("abc", result[5]);
    }

    @Test
    public void test2() {
        String target = "he";
        String[] result = leetCodeSolution(target);
        assertEquals("a", result[0]);
        assertEquals("b", result[1]);
        assertEquals("c", result[2]);
        assertEquals("d", result[3]);
        assertEquals("e", result[4]);
        assertEquals("f", result[5]);
        assertEquals("g", result[6]);
        assertEquals("h", result[7]);
        assertEquals("ha", result[8]);
        assertEquals("hb", result[9]);
        assertEquals("hc", result[10]);
        assertEquals("hd", result[11]);
        assertEquals("he", result[12]);
    }

    @Test
    public void test3() {
        String target = "a";
        String[] result = leetCodeSolution(target);
        assertEquals("a", result[0]);
    }

    @Test
    public void test4() {
        String target = "";
        String[] result = leetCodeSolution(target);
        assertTrue(result.length == 1 && result[0].equals(""));
    }

    @Test
    public void test5() {
        String target = "abcabc";
        String[] result = leetCodeSolution(target);
        assertEquals("a", result[0]);
        assertEquals("aa", result[1]);
        assertEquals("ab", result[2]);
        assertEquals("aba", result[3]);
        assertEquals("abb", result[4]);
        assertEquals("abc", result[5]);
        assertEquals("aaabc", result[6]);
        assertEquals("aabbc", result[7]);
        assertEquals("aabbcc", result[8]);
        assertEquals("abbbccc", result[9]);
        assertEquals("abccddd", result[10]);
        assertEquals("abddddde", result[11]);
        assertEquals("abcdedfgg", result[12]);
    }
}