package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1605;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1605.Solution;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.assertArrayEquals;

public class 1605_DescriptionOnly_testsTest {

    @Test
    public void test1() {
        Solution solution = new Solution();
        int[][] rowSum = {{9}, {3}};
        int[][] colSum = {{12}, {6}};
        int[][] result = solution.restoreMatrix(rowSum, colSum);
        assertArrayEquals(new int[][]{{4, 5}, {3, 7}}, result);
    }

    @Test
    public void test2() {
        Solution solution = new Solution();
        int[][] rowSum = {{1, 1}, {1, 1}};
        int[][] colSum = {{2}, {2}};
        int[][] result = solution.restoreMatrix(rowSum, colSum);
        assertArrayEquals(new int[][]{{1, 0}, {0, 1}}, result);
    }

    @Test
    public void test3() {
        Solution solution = new Solution();
        int[][] rowSum = {{15}, {6}};
        int[][] colSum = {{12}, {7}};
        int[][] result = solution.restoreMatrix(rowSum, colSum);
        assertArrayEquals(new int[][]{{1, 4}, {2, 3}}, result);
    }

    @Test
    public void test4() {
        Solution solution = new Solution();
        int[][] rowSum = {{0}, {0}};
        int[][] colSum = {{0}, {0}};
        int[][] result = solution.restoreMatrix(rowSum, colSum);
        assertArrayEquals(new int[][]{{0, 0}, {0, 0}}, result);
    }

    @Test
    public void test5() {
        Solution solution = new Solution();
        int[][] rowSum = {{1}, {2}};
        int[][] colSum = {{3}, {4}};
        int[][] result = solution.restoreMatrix(rowSum, colSum);
        assertArrayEquals(new int[][]{{1, 0}, {0, 2}}, result);
    }
}