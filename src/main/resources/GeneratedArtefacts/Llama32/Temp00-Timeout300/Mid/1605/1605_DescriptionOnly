package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 1605_DescriptionOnly {

    @Test
    public void test1() {
        int[][] rowSum = {{15},{12},{10}};
        int[][] colSum = {{9},{8},{7}};
        int[][] result = new Solution().restoreMatrix(rowSum, colSum);
        assertEquals(3, result.length);
        assertEquals(2, result[0].length);
    }

    @Test
    public void test2() {
        int[][] rowSum = {{1, 1}, {1, 1}};
        int[][] colSum = {{2}, {2}};
        int[][] result = new Solution().restoreMatrix(rowSum, colSum);
        assertEquals(2, result.length);
        assertEquals(2, result[0].length);
    }

    @Test
    public void test3() {
        int[][] rowSum = {{1, 2}, {3, 4}};
        int[][] colSum = {{5}, {6}};
        int[][] result = new Solution().restoreMatrix(rowSum, colSum);
        assertEquals(2, result.length);
        assertEquals(2, result[0].length);
    }

    @Test
    public void test4() {
        int[][] rowSum = {{1, 1, 1}, {1, 1, 1}};
        int[][] colSum = {{3}, {3}};
        int[][] result = new Solution().restoreMatrix(rowSum, colSum);
        assertEquals(2, result.length);
        assertEquals(3, result[0].length);
    }

    @Test
    public void test5() {
        int[][] rowSum = {{1, 2, 3}, {4, 5, 6}};
        int[][] colSum = {{7}, {8}, {9}};
        int[][] result = new Solution().restoreMatrix(rowSum, colSum);
        assertEquals(3, result.length);
        assertEquals(3, result[0].length);
    }
}