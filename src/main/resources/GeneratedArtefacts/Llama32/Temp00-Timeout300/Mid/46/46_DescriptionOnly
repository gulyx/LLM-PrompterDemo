```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import java.util.Arrays;
import java.util.List;

public class DescriptionOnly {

    @Test
    public void testPermutations() {
        int[] nums = {1, 2, 3};
        List<List<Integer>> result = getPermutations(nums);
        System.out.println(result);
    }

    @Test
    public void testEmptyArray() {
        int[] nums = {};
        List<List<Integer>> result = getPermutations(nums);
        assert result.isEmpty();
    }

    @Test
    public void testSingleElementArray() {
        int[] nums = {1};
        List<List<Integer>> result = getPermutations(nums);
        assert result.size() == 1;
        assertEquals(Arrays.asList(1), result.get(0));
    }

    @Test
    public void testDuplicateElements() {
        int[] nums = {1, 2, 2};
        List<List<Integer>> result = getPermutations(nums);
        assert result.size() == 3;
        assertEquals(Arrays.asList(1, 2, 2), result.get(0));
        assertEquals(Arrays.asList(1, 2, 2), result.get(1));
        assertEquals(Arrays.asList(1, 2, 2), result.get(2));
    }

    @Test
    public void testLargeArray() {
        int[] nums = {1, 2, 3, 4};
        List<List<Integer>> result = getPermutations(nums);
        assert result.size() == 24;
    }
}
```