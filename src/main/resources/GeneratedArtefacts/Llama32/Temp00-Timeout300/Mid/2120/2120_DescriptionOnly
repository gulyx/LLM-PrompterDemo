package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 2120_DescriptionOnly {

    @Test
    public void test1() {
        int n = 2;
        String[] startPos = {"0", "0"};
        String s = "DR";
        int[][] answer = solution(n, startPos, s);
        assertEquals(new int[]{3}, answer[0]);
    }

    @Test
    public void test2() {
        int n = 4;
        String[] startPos = {"1", "1"};
        String s = "LURD";
        int[][] answer = solution(n, startPos, s);
        assertEquals(new int[]{6}, answer[0]);
    }

    @Test
    public void test3() {
        int n = 5;
        String[] startPos = {"2", "2"};
        String s = "DRDL";
        int[][] answer = solution(n, startPos, s);
        assertEquals(new int[]{4}, answer[0]);
    }

    @Test
    public void test4() {
        int n = 6;
        String[] startPos = {"3", "3"};
        String s = "LURDDLR";
        int[][] answer = solution(n, startPos, s);
        assertEquals(new int[]{8}, answer[0]);
    }

    @Test
    public void test5() {
        int n = 7;
        String[] startPos = {"4", "4"};
        String s = "DRDLURDDLR";
        int[][] answer = solution(n, startPos, s);
        assertEquals(new int[]{12}, answer[0]);
    }
}