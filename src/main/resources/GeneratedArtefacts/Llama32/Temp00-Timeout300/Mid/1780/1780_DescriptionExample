```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 1780_DescriptionExample {

    @Test
    public void canRepresentAsSumOfDistinctPowers() {
        boolean result = canRepresentAsSumOfDistinctPowers(12);
        assertTrue(result);
    }

    @Test
    public void canRepresentAsSumOfDistinctPowersFor91() {
        boolean result = canRepresentAsSumOfDistinctPowers(91);
        assertTrue(result);
    }

    @Test
    public void cannotRepresentAsSumOfDistinctPowersFor21() {
        boolean result = canRepresentAsSumOfDistinctPowers(21);
        assertFalse(result);
    }

    @Test
    public void canRepresentAsSumOfDistinctPowersFor0() {
        boolean result = canRepresentAsSumOfDistinctPowers(0);
        assertTrue(result);
    }

    @Test
    public void cannotRepresentAsSumOfDistinctPowersFor1() {
        boolean result = canRepresentAsSumOfDistinctPowers(1);
        assertFalse(result);
    }
    
    private boolean canRepresentAsSumOfDistinctPowers(int n) {
        while (n > 0) {
            if ((n & 1) == 1) {
                return false;
            }
            n >>= 1;
        }
        return true;
    }
}
```