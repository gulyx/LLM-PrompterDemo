package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 2683_DescriptionOnlyTest {

    @Test
    public void test_1() {
        int[] derived = {2,0,5};
        assertTrue(isValidBinaryArray(derived));
    }

    @Test
    public void test_2() {
        int[] derived = {4,0,1};
        assertFalse(isValidBinaryArray(derived));
    }

    @Test
    public void test_3() {
        int[] derived = {1,1,0};
        assertTrue(isValidBinaryArray(derived));
    }

    @Test
    public void test_4() {
        int[] derived = {2,2,2};
        assertTrue(isValidBinaryArray(derived));
    }

    @Test
    public void test_5() {
        int[] derived = {0,1,3};
        assertFalse(isValidBinaryArray(derived));
    }
}

public class Solution {

    public boolean isValidBinaryArray(int[] derived) {
        if (derived.length == 1) return true;
        for (int i = 0; i < derived.length - 1; i++) {
            int x = derived[i];
            int y = derived[i + 1];
            if ((x & y) != x || (y & x) != y) return false;
        }
        return true;
    }
}