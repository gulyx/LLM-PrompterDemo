```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 2683_DescriptionExample {

    @Test
    public void test_1() {
        int[] derived = {1,1,0};
        assertTrue(isValidBinaryArray(derived));
    }

    @Test
    public void test_2() {
        int[] derived = {1,1};
        assertTrue(isValidBinaryArray(derived));
    }

    @Test
    public void test_3() {
        int[] derived = {1,0};
        assertFalse(isValidBinaryArray(derived));
    }

    @Test
    public void test_4() {
        int[] derived = {0,0,0};
        assertTrue(isValidBinaryArray(derived));
    }

    @Test
    public void test_5() {
        int[] derived = {1,2,3};
        assertFalse(isValidBinaryArray(derived));
    }

    private boolean isValidBinaryArray(int[] derived) {
        for (int i = 0; i < derived.length - 1; i++) {
            if ((derived[i] ^ derived[i + 1]) != (derived[0] ^ derived[i])) {
                return false;
            }
        }
        return true;
    }
}
```