package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import java.util.List;
import java.util.ArrayList;

public class 237_DescriptionOnly {

    public static void main(String[] args) {
        List<Node> head = new ArrayList<>();
        Node node1 = new Node(1);
        Node node2 = new Node(2);
        Node node3 = new Node(3);

        head.add(node1);
        head.add(node2);
        head.add(node3);

        Node nodeToDelete = head.get(1);

        head = deleteNode(head, nodeToDelete);

        for (Node node : head) {
            System.out.print(node.val + " ");
        }
    }

}

class Node {
    int val;
    Node next;

    public Node(int val) {
        this.val = val;
        this.next = null;
    }
}

public class Solution {

    public static List<Node> deleteNode(List<Node> head, Node nodeToDelete) {
        if (head.get(0).val == nodeToDelete.val) {
            return new ArrayList<>(head.subList(1, head.size()));
        }

        Node current = head.get(0);
        while (current.next != null && current.next.val != nodeToDelete.val) {
            current = current.next;
        }
        if (current.next == null) {
            throw new RuntimeException("Node to delete not found in the list");
        }

        int valBefore = current.next.val;
        current.next.val = head.get(0).val;

        Node temp = head.get(0);
        while (temp.next != null && temp.next.val == valBefore) {
            temp = temp.next;
        }
        temp.next = current.next.next;

        return new ArrayList<>(head.subList(1, head.size()));
    }

}