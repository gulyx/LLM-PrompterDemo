package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import java.util.List;
import java.util.ArrayList;

public class 237_DescriptionOnlyTest {

    public static void main(String[] args) {
        List<Node> head = new ArrayList<>();
        Node node1 = new Node(1);
        Node node2 = new Node(2);
        Node node3 = new Node(3);

        head.add(node1);
        head.add(node2);
        head.add(node3);

        Node nodeToDelete = head.get(1);

        head = deleteNode(head, nodeToDelete);

        for (Node node : head) {
            System.out.print(node.val + " ");
        }
    }

}

class Node {
    int val;
    Node next;

    public Node(int val) {
        this.val = val;
        this.next = null;
    }
}

public class Solution {

    public static List<Node> deleteNode(List<Node> head, Node nodeToDelete) {
        if (nodeToDelete == null || nodeToDelete.next == null) {
            return null;
        }

        Node current = head;

        while (current != null && current.next != null) {
            if (current.next.val == nodeToDelete.val) {
                break;
            }
            current = current.next;
        }

        if (current.next.val == nodeToDelete.val) {
            int val = current.next.val;
            current.next = current.next.next;

            return head;
        } else {
            return null;
        }
    }
}