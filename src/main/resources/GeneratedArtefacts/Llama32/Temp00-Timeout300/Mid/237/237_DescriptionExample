package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import java.util.List;
import java.util.ArrayList;

public class DescriptionExample {

    public static void main(String[] args) {
        System.out.println(deleteNode(new ListNode(4), new ListNode(5)));
        System.out.println(deleteNode(new ListNode(4), new ListNode(1)));
        System.out.println(deleteNode(new ListNode(4), new ListNode(9)));
        System.out.println(deleteNode(new ListNode(1), new ListNode(2)));
        System.out.println(deleteNode(new ListNode(3), new ListNode(4)));
    }

    public static ListNode deleteNode(ListNode head, ListNode node) {
        if (head == null || head.next == null) return null;
        if (head.val == node.val) {
            head = head.next;
            return head;
        }
        ListNode prev = head;
        while (prev.next != null && prev.next.val != node.val) {
            prev = prev.next;
        }
        if (prev.next == null) return null;
        ListNode temp = prev.next;
        prev.next = temp.next;
        return head;
    }

    public static class ListNode {
        int val;
        ListNode next;

        ListNode(int x) {
            val = x;
        }
    }
}