package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1561;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1561.Solution;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertThrows;

public class 1561_DescriptionOnly_testsTest {

    @Test
    public void test_0() {
        Solution solution = new Solution();
        int[] piles = {2,7,12};
        assertEquals(2, solution.maxCoins(piles));
    }

    @Test
    public void test_1() {
        Solution solution = new Solution();
        int[] piles = {1, 5, 7, 9};
        assertEquals(13, solution.maxCoins(piles));
    }

    @Test
    public void test_2() {
        Solution solution = new Solution();
        int[] piles = {1, 2, 3, 4, 5, 6};
        assertEquals(15, solution.maxCoins(piles));
    }

    @Test
    public void test_3() {
        Solution solution = new Solution();
        int[] piles = {1, 2, 3, 4, 5, 6, 7, 8, 9};
        assertEquals(24, solution.maxCoins(piles));
    }

    @Test
    public void test_4() {
        Solution solution = new Solution();
        assertThrows(NullPointerException.class, () -> solution.maxCoins(null));
    }
}