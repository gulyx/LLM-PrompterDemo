```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class DescriptionOnly {

    @Test
    public void testValidStrings() {
        String result = validBinaryString(1);
        assertEquals("1", result);
    }

    @Test
    public void testValidStrings2() {
        String result = validBinaryString(2);
        assertEquals("01", result);
    }

    @Test
    public void testValidStrings3() {
        String result = validBinaryString(3);
        assertEquals("101", result);
    }

    @Test
    public void testValidStrings4() {
        String result = validBinaryString(4);
        assertEquals("1101", result);
    }

    @Test
    public void testValidStrings5() {
        String result = validBinaryString(10);
        StringBuilder sb = new StringBuilder();
        for (int i = 0; i < 10; i++) {
            sb.append('0');
        }
        assertEquals(sb.toString(), result);
    }

    public String validBinaryString(int n) {
        if (n == 1) return "1";
        if (n == 2) return "01";
        StringBuilder sb = new StringBuilder();
        for (int i = 0; i < n - 2; i++) {
            sb.append('0');
        }
        sb.append("1");
        while (sb.length() < n) {
            sb.append("01");
        }
        return sb.toString();
    }
}
```