package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 3191_DescriptionOnly {

    @Test
    public void testAllOnes() {
        int[] nums = {1,1,1};
        assertEquals(0, minOperations(nums));
    }

    @Test
    public void testNotEnoughOnes() {
        int[] nums = {0,0,0};
        assertEquals(-1, minOperations(nums));
    }

    @Test
    public void testAllZeros() {
        int[] nums = {0,0,0,0,0};
        assertEquals(4, minOperations(nums));
    }

    @Test
    public void testMixedOnesAndZeros() {
        int[] nums = {1,0,1,0,1};
        assertEquals(2, minOperations(nums));
    }

    @Test
    public void testAllZerosExceptLastOne() {
        int[] nums = {0,0,0,0,1};
        assertEquals(-1, minOperations(nums));
    }
}