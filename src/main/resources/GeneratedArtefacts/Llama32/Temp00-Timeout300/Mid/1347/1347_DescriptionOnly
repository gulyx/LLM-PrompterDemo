```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import java.util.Arrays;
import java.util.HashMap;
import java.util.Map;

public class DescriptionOnly {

    public int minSteps(String s, String t) {
        Map<Character, Integer> map = new HashMap<>();
        for (char c : s.toCharArray()) {
            map.put(c, map.getOrDefault(c, 0) + 1);
        }
        for (char c : t.toCharArray()) {
            map.put(c, map.getOrDefault(c, 0) - 1);
        }
        int steps = 0;
        for (int count : map.values()) {
            if (count < 0) {
                steps += count;
            }
        }
        return Math.abs(steps);
    }

    public void testMinSteps() {
        System.out.println(minSteps("ab", "ba") + " == " + 1);
        System.out.println(minSteps("aa", "ab") + " == " + 1);
        System.out.println(minSteps("abc", "cab") + " == " + 3);
        System.out.println(minSteps("leetcode", "practice") + " == " + 7);
        System.out.println(minSteps("intention", "execution") + " == " + 5);
    }

    public static void main(String[] args) {
        DescriptionOnly test = new DescriptionOnly();
        test.testMinSteps();
    }
}
```