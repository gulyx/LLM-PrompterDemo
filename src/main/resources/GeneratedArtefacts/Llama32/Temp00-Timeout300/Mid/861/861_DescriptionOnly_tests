package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class DescriptionOnlyTest {

    @Test
    public void testScore() {
        int[][] grid = {{1,0},{0,1}};
        assertEquals(2, getMaximumScore(grid));
    }

    @Test
    public void testScore2() {
        int[][] grid = {{1,1,0},{0,0,1},{1,0,0}};
        assertEquals(4, getMaximumScore(grid));
    }

    @Test
    public void testScore3() {
        int[][] grid = {{0,0,0},{0,0,0},{0,0,0}};
        assertEquals(0, getMaximumScore(grid));
    }

    @Test
    public void testScore4() {
        int[][] grid = {{1,1,1},{1,1,1},{1,1,1}};
        assertEquals(9, getMaximumScore(grid));
    }

    @Test
    public void testScore5() {
        int[][] grid = {{0,1},{1,0}};
        assertEquals(1, getMaximumScore(grid));
    }
}