package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.*;

public class 1551_DescriptionOnly {

    @Test
    public void testMinOperations() {
        int[] arr = {3, 1, 3, 5};
        assertEquals(4, minOperations(arr));
    }

    @Test
    public void testMinOperations_2() {
        int[] arr = {1, 2, 3, 4};
        assertEquals(6, minOperations(arr));
    }

    @Test
    public void testMinOperations_3() {
        int[] arr = {10, 20, 30, 40};
        assertEquals(60, minOperations(arr));
    }

    @Test
    public void testMinOperations_4() {
        int[] arr = {1, 2, 3, 4, 5};
        assertEquals(15, minOperations(arr));
    }

    @Test
    public void testMinOperations_5() {
        int[] arr = {1000, 2000, 3000, 4000};
        assertEquals(12000, minOperations(arr));
    }
}

public class Solution {

    public int minOperations(int[] arr) {
        int n = arr.length;
        long sum = 0;
        for (int num : arr) {
            sum += num;
        }

        return (int) ((sum / n) * n - sum);
    }
}