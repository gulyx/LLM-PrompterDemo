```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class DescriptionExampleTest {

    @Test
    public void testMinOperations() {
        int n = 3;
        int expected = 2;
        assertEquals(expected, minOperations(n));
    }

    @Test
    public void testMinOperations_6() {
        int n = 6;
        int expected = 9;
        assertEquals(expected, minOperations(n));
    }

    @Test
    public void testMinOperations_1() {
        int n = 1;
        int expected = 0;
        assertEquals(expected, minOperations(n));
    }

    @Test
    public void testMinOperations_2() {
        int n = 2;
        int expected = 1;
        assertEquals(expected, minOperations(n));
    }

    @Test
    public void testMinOperations_10() {
        int n = 10;
        int expected = 45;
        assertEquals(expected, minOperations(n));
    }
}

public class Solution {

    public int minOperations(int n) {
        return (n - 1) * n / 2;
    }
}
```