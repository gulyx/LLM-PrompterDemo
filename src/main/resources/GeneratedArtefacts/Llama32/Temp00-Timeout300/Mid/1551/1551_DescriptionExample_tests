```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1551;

import it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen.1551.Solution;

public class DescriptionExampleTestsTest {

    public void testMinOperations() {
        Solution solution = new Solution();
        int[] result1 = {3, 5};
        int expected1 = 2;
        assertEquals(expected1, solution.minOperations(3), 0);
        
        int[] result2 = {6, 7, 8, 9, 10, 11};
        int expected2 = 9;
        assertEquals(expected2, solution.minOperations(6), 0);
    }

    public void testMinOperations_1() {
        Solution solution = new Solution();
        int[] result1 = {1, 3, 5};
        int expected1 = 4;
        assertEquals(expected1, solution.minOperations(3), 0);
        
        int[] result2 = {2, 4, 6, 8, 10};
        int expected2 = 14;
        assertEquals(expected2, solution.minOperations(5), 0);
    }

    public void testMinOperations_2() {
        Solution solution = new Solution();
        int[] result1 = {7, 9, 11, 13, 15, 17};
        int expected1 = 30;
        assertEquals(expected1, solution.minOperations(6), 0);
        
        int[] result2 = {8, 10, 12, 14, 16, 18};
        int expected2 = 42;
        assertEquals(expected2, solution.minOperations(6), 0);
    }

    public void testMinOperations_3() {
        Solution solution = new Solution();
        int[] result1 = {1, 5, 9, 13, 17};
        int expected1 = 24;
        assertEquals(expected1, solution.minOperations(5), 0);
        
        int[] result2 = {2, 6, 10, 14, 18};
        int expected2 = 36;
        assertEquals(expected2, solution.minOperations(5), 0);
    }

    public void testMinOperations_4() {
        Solution solution = new Solution();
        int[] result1 = {3, 7, 11, 15, 19};
        int expected1 = 48;
        assertEquals(expected1, solution.minOperations(5), 0);
        
        int[] result2 = {4, 8, 12, 16, 20};
        int expected2 = 60;
        assertEquals(expected2, solution.minOperations(5), 0);
    }

    public void testMinOperations_5() {
        Solution solution = new Solution();
        int[] result1 = {7, 11, 15, 19, 23, 27};
        int expected1 = 96;
        assertEquals(expected1, solution.minOperations(6), 0);
        
        int[] result2 = {8, 12, 16, 20, 24, 28};
        int expected2 = 108;
        assertEquals(expected2, solution.minOperations(6), 0);
    }
}
