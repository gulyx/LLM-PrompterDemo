```java
package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;

public class DescriptionExample {

    @Test
    public void testLaserBeams() {
        String[][] bank = {{"011001","000000","010100","001000"},{"000","111","000"},{"0000"}};
        int expected = 8;
        assertEquals(expected, laserBeams(bank));
    }

    @Test
    public void testNoLaserBeams() {
        String[][] bank = {{"000","111","000"},{"0000"}};
        int expected = 0;
        assertEquals(expected, laserBeams(bank));
    }

    @Test
    public void testSingleRow() {
        String[][] bank = {{"0000"}};
        int expected = 0;
        assertEquals(expected, laserBeams(bank));
    }

    @Test
    public void testNoSecurityDevices() {
        String[][] bank = {{"000","111"},{"0000"}};
        int expected = 2;
        assertEquals(expected, laserBeams(bank));
    }

    @Test
    public void testEmptyBank() {
        String[][] bank = {};
        int expected = 0;
        assertEquals(expected, laserBeams(bank));
    }
}
```