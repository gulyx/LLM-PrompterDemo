package it.cnr.iasi.saks.llmPrompter.leetCodeDemo.gen;

import org.junit.Test;
import static org.junit.Assert.assertEquals;
import java.util.*;

public class 2125_DescriptionOnlyTest {

    @Test
    public void test_LaserBeams() {
        String[] bank = {"0000", "1111"};
        int expected = 2;
        assertEquals(expected, laserBeams(bank));
    }

    @Test
    public void test_LaserBeams_WithEmptyRows() {
        String[] bank = {"0011", "0110", "1000"};
        int expected = 3;
        assertEquals(expected, laserBeams(bank));
    }

    @Test
    public void test_LaserBeams_WithNoSecurityDevices() {
        String[] bank = {"0000", "0000"};
        int expected = 0;
        assertEquals(expected, laserBeams(bank));
    }

    @Test
    public void test_LaserBeams_WithMultipleRows() {
        String[] bank = {"1111", "0000", "0000", "0000"};
        int expected = 3;
        assertEquals(expected, laserBeams(bank));
    }

    @Test
    public void test_LaserBeams_WithNoLaserBeams() {
        String[] bank = {"0000", "0000", "0000"};
        int expected = 0;
        assertEquals(expected, laserBeams(bank));
    }
}